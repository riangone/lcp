@using Platform.Infrastructure.Definitions
@model IEnumerable<Dictionary<string, object>>
@{
    var def = (ModelDefinition)ViewData["ModelDef"]!;
    var modelName = (string)ViewData["ModelName"]!;
    var pageNum = (int)ViewData["Page"]!;
    var size = (int)ViewData["Size"]!;
    var total = (int)ViewData["Total"]!;
    var currentLang = Context.Request.Query["lang"].FirstOrDefault() ?? "en";
    var currentProject = Context.Request.Query["project"].FirstOrDefault() ?? "chinook";
    
    var localizedLabels = currentLang == "zh" ? def.Ui?.Labels?.Zh : def.Ui?.Labels?.En;
    var title = localizedLabels != null && localizedLabels.ContainsKey("title") ? localizedLabels["title"] : modelName;
}

<div class="chinook-music-app">
    <!-- Èü≥‰πê‰∏ªÈ¢òÂ§¥ÈÉ® -->
    <div class="music-header">
        <div class="header-content">
            <h1 class="music-title">
                <span class="music-icon">üéµ</span>
                @title
            </h1>
            <div class="music-stats">
                <span class="stat-item">
                    <span class="stat-num">@total</span>
                    <span class="stat-text">@(currentLang == "zh" ? "‰ΩçËâ∫ÊúØÂÆ∂" : "Artists")</span>
                </span>
            </div>
        </div>
    </div>

    <!-- Ëâ∫ÊúØÂÆ∂ÁΩëÊ†º -->
    <div class="artist-grid">
        @foreach (var artist in Model)
        {
            var id = artist[def.PrimaryKey]?.ToString() ?? "";
            var name = artist.ContainsKey("Name") ? artist["Name"]?.ToString() ?? "" : "";
            
            <div class="artist-card" data-id="@id">
                <div class="artist-avatar">
                    <span class="avatar-icon">üé§</span>
                </div>
                <h3 class="artist-name">@name</h3>
                <div class="artist-actions">
                    <a href="/ui/Artist/edit/@id?project=@currentProject" class="btn-action btn-edit">‚úèÔ∏è</a>
                    <button class="btn-action btn-delete" onclick="openDeleteDialog('@modelName', '@id')">üóëÔ∏è</button>
                </div>
            </div>
        }

        @if (!Model.Any())
        {
            <div class="empty-music">
                <span class="empty-icon">üéµ</span>
                <h3>@(currentLang == "zh" ? "ÊöÇÊó†Ëâ∫ÊúØÂÆ∂" : "No artists yet")</h3>
            </div>
        }
    </div>
</div>

<style>
    .chinook-music-app {
        max-width: 1400px;
        margin: 0 auto;
        padding: 2rem;
        background: linear-gradient(135deg, #1a1a2e 0%, #16213e 50%, #0f3460 100%);
        min-height: 100vh;
    }

    .music-header {
        background: linear-gradient(135deg, #e94560, #c73659);
        border-radius: 20px;
        padding: 2.5rem;
        margin-bottom: 2rem;
        box-shadow: 0 15px 50px rgba(233, 69, 96, 0.4);
    }

    .header-content {
        display: flex;
        justify-content: space-between;
        align-items: center;
    }

    .music-title {
        color: white;
        font-size: 2.5rem;
        font-weight: 700;
        display: flex;
        align-items: center;
        gap: 1rem;
    }

    .music-icon {
        font-size: 3rem;
        animation: pulse 2s infinite;
    }

    @@keyframes pulse {
        0%, 100% { transform: scale(1); }
        50% { transform: scale(1.1); }
    }

    .music-stats {
        display: flex;
        gap: 2rem;
    }

    .stat-item {
        text-align: center;
        color: white;
    }

    .stat-num {
        display: block;
        font-size: 2.5rem;
        font-weight: 700;
    }

    .stat-text {
        font-size: 0.875rem;
        opacity: 0.9;
    }

    .artist-grid {
        display: grid;
        grid-template-columns: repeat(auto-fill, minmax(200px, 1fr));
        gap: 2rem;
    }

    .artist-card {
        background: rgba(255, 255, 255, 0.05);
        backdrop-filter: blur(10px);
        border: 1px solid rgba(255, 255, 255, 0.1);
        border-radius: 20px;
        padding: 2rem;
        text-align: center;
        transition: all 0.3s;
    }

    .artist-card:hover {
        background: rgba(255, 255, 255, 0.1);
        transform: translateY(-8px);
        border-color: #e94560;
    }

    .artist-avatar {
        width: 100px;
        height: 100px;
        margin: 0 auto 1.5rem;
        border-radius: 50%;
        background: linear-gradient(135deg, #e94560, #e94560);
        display: flex;
        align-items: center;
        justify-content: center;
        box-shadow: 0 8px 30px rgba(233, 69, 96, 0.4);
    }

    .avatar-icon {
        font-size: 3rem;
    }

    .artist-name {
        color: white;
        font-size: 1.125rem;
        font-weight: 600;
        margin-bottom: 1rem;
    }

    .artist-actions {
        display: flex;
        justify-content: center;
        gap: 0.75rem;
    }

    .btn-action {
        width: 36px;
        height: 36px;
        border-radius: 50%;
        border: none;
        background: rgba(255, 255, 255, 0.1);
        color: white;
        cursor: pointer;
        font-size: 1rem;
        transition: all 0.2s;
    }

    .btn-action:hover {
        background: #e94560;
        transform: scale(1.1);
    }

    .empty-music {
        text-align: center;
        padding: 4rem;
        color: rgba(255, 255, 255, 0.5);
        grid-column: 1 / -1;
    }

    .empty-icon {
        font-size: 5rem;
        display: block;
        margin-bottom: 1rem;
        opacity: 0.5;
    }
</style>
