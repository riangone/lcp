@using Platform.Infrastructure.Definitions
@model IEnumerable<Dictionary<string, object>>
@{
    var def = (ModelDefinition)ViewData["ModelDef"]!;
    var modelName = (string)ViewData["ModelName"]!;
    var total = (int)ViewData["Total"]!;
    var currentLang = Context.Request.Query["lang"].FirstOrDefault() ?? "en";
    var currentProject = Context.Request.Query["project"].FirstOrDefault() ?? "crm";
    var localizedLabels = currentLang == "zh" ? def.Ui?.Labels?.Zh : def.Ui?.Labels?.En;
    var title = localizedLabels != null && localizedLabels.ContainsKey("title") ? localizedLabels["title"] : modelName;
}

<div class="crm-business">
    <div class="crm-header">
        <div class="header-left">
            <h1><span>üíº</span> @title</h1>
            <span class="customer-count">@total @(currentLang == "zh" ? "‰ΩçÂÆ¢Êà∑" : "Customers")</span>
        </div>
        <a href="/ui/Customer/create?project=@currentProject" class="btn-add-customer">
            <span>‚ûï</span> @(currentLang == "zh" ? "Ê∑ªÂä†ÂÆ¢Êà∑" : "Add Customer")
        </a>
    </div>

    <div class="customer-table-wrapper">
        <table class="customer-table">
            <thead>
                <tr>
                    <th>@(currentLang == "zh" ? "ÂÆ¢Êà∑" : "Customer")</th>
                    <th>@(currentLang == "zh" ? "ÂÖ¨Âè∏" : "Company")</th>
                    <th>@(currentLang == "zh" ? "ÈÇÆÁÆ±" : "Email")</th>
                    <th>@(currentLang == "zh" ? "ÁîµËØù" : "Phone")</th>
                    <th>@(currentLang == "zh" ? "Êìç‰Ωú" : "Actions")</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var customer in Model)
                {
                    var id = customer[def.PrimaryKey]?.ToString() ?? "";
                    var firstName = customer.ContainsKey("FirstName") ? customer["FirstName"]?.ToString() ?? "" : "";
                    var lastName = customer.ContainsKey("LastName") ? customer["LastName"]?.ToString() ?? "" : "";
                    var company = customer.ContainsKey("Company") ? customer["Company"]?.ToString() ?? "" : "";
                    var email = customer.ContainsKey("Email") ? customer["Email"]?.ToString() ?? "" : "";
                    var phone = customer.ContainsKey("Phone") ? customer["Phone"]?.ToString() ?? "" : "";
                    
                    var avatarInitials = "";
                    if (!string.IsNullOrEmpty(firstName) && firstName.Length > 0) avatarInitials += firstName[0];
                    if (!string.IsNullOrEmpty(lastName) && lastName.Length > 0) avatarInitials += lastName[0];
                    if (string.IsNullOrEmpty(avatarInitials)) avatarInitials = "?";
                    
                    <tr class="customer-row" data-id="@id">
                        <td>
                            <div class="customer-info">
                                <span class="avatar">@avatarInitials</span>
                                <span class="name">@firstName @lastName</span>
                            </div>
                        </td>
                        <td>@company</td>
                        <td>@email</td>
                        <td>@phone</td>
                        <td>
                            <div class="action-buttons">
                                <a href="/ui/Customer/edit/@id?project=@currentProject" class="btn-action btn-edit" title="@(currentLang == "zh" ? "ÁºñËæë" : "Edit")">‚úèÔ∏è</a>
                                <button class="btn-action btn-delete" onclick="openDeleteDialog('@modelName', '@id')" title="@(currentLang == "zh" ? "Âà†Èô§" : "Delete")">üóëÔ∏è</button>
                            </div>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>

<style>
    .crm-business {
        max-width: 1400px;
        margin: 0 auto;
        padding: 2rem;
        background: linear-gradient(135deg, #f0f9ff 0%, #e0f2fe 50%, #bae6fd 100%);
        min-height: 100vh;
    }

    .crm-header {
        background: linear-gradient(135deg, #0284c7, #0369a1);
        border-radius: 16px;
        padding: 2rem;
        margin-bottom: 2rem;
        display: flex;
        justify-content: space-between;
