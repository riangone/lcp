@using Platform.Infrastructure.Definitions
@model IEnumerable<Dictionary<string, object>>
@{
    var def = (ModelDefinition)ViewData["ModelDef"]!;
    var modelName = (string)ViewData["ModelName"]!;
    var pageNum = (int)ViewData["Page"]!;
    var size = (int)ViewData["Size"]!;
    var total = (int)ViewData["Total"]!;
    var currentLang = Context.Request.Query["lang"].FirstOrDefault() ?? "en";
    var currentProject = Context.Request.Query["project"].FirstOrDefault() ?? "todo";

    var localizedLabels = currentLang == "zh" ? def.Ui?.Labels?.Zh : def.Ui?.Labels?.En;
    var title = localizedLabels != null && localizedLabels.ContainsKey("title") ? localizedLabels["title"] : modelName;

    var statusConfig = new Dictionary<string, (string color, string icon, string label)>
    {
        { "pending", ("status-pending", "‚è≥", currentLang == "zh" ? "ÂæÖÂ§ÑÁêÜ" : "Pending") },
        { "in_progress", ("status-in-progress", "üîÑ", currentLang == "zh" ? "ËøõË°å‰∏≠" : "In Progress") },
        { "completed", ("status-completed", "‚úÖ", currentLang == "zh" ? "Â∑≤ÂÆåÊàê" : "Completed") },
        { "cancelled", ("status-cancelled", "‚ùå", currentLang == "zh" ? "Â∑≤ÂèñÊ∂à" : "Cancelled") }
    };

    var priorityConfig = new Dictionary<string, (string badge, string icon, string label)>
    {
        { "urgent", ("priority-urgent-badge", "üî•", currentLang == "zh" ? "Á¥ßÊÄ•" : "Urgent") },
        { "high", ("priority-high-badge", "üî¥", currentLang == "zh" ? "È´ò" : "High") },
        { "medium", ("priority-medium-badge", "üü°", currentLang == "zh" ? "‰∏≠" : "Medium") },
        { "low", ("priority-low-badge", "üîµ", currentLang == "zh" ? "‰Ωé" : "Low") }
    };

    var stats = Model.GroupBy(t => t.ContainsKey("Status") ? t["Status"]?.ToString() : "pending")
        .ToDictionary(g => g.Key, g => g.Count());
    var totalTasks = Model.Count();
    var pendingCount = stats.GetValueOrDefault("pending", 0);
    var inProgressCount = stats.GetValueOrDefault("in_progress", 0);
    var completedCount = stats.GetValueOrDefault("completed", 0);
}

<!DOCTYPE html>
<html lang="zh-CN">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@title - TODO</title>
    <script src="https://cdn.tailwindcss.com"></script>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" />
    <link rel="stylesheet" href="/css/todo.css" />
    <style>
        body {
            background: linear-gradient(135deg, #0f172a 0%, #1e293b 50%, #064e3b 100%);
            min-height: 100vh;
        }
        .task-list-container {
            max-width: 1400px;
            margin: 0 auto;
            padding: 2rem;
        }
        .page-header {
            background: linear-gradient(135deg, #10b981, #059669);
            border-radius: 16px;
            padding: 2rem;
            margin-bottom: 2rem;
            box-shadow: 0 10px 40px rgba(5, 150, 105, 0.3);
        }
        .page-title {
            color: white;
            font-size: 2rem;
            font-weight: 700;
            display: flex;
            align-items: center;
            gap: 0.75rem;
        }
        .toolbar {
            background: rgba(30, 41, 59, 0.8);
            border-radius: 12px;
            padding: 1.25rem;
            margin-bottom: 1.5rem;
            display: flex;
            justify-content: space-between;
            align-items: center;
            border: 1px solid rgba(16, 185, 129, 0.2);
        }
        .btn-new-task {
            background: linear-gradient(135deg, #10b981, #059669);
            color: white;
            padding: 0.75rem 1.5rem;
            border-radius: 10px;
            text-decoration: none;
            font-weight: 600;
            display: inline-flex;
            align-items: center;
            gap: 0.5rem;
            transition: all 0.2s;
        }
        .btn-new-task:hover {
            background: linear-gradient(135deg, #059669, #047857);
            box-shadow: 0 4px 16px rgba(16, 185, 129, 0.4);
            transform: translateY(-1px);
        }
        .view-toggle {
            display: flex;
            gap: 0.5rem;
            background: rgba(107, 114, 128, 0.2);
            padding: 0.375rem;
            border-radius: 8px;
        }
        .view-btn {
            padding: 0.5rem 1rem;
            border-radius: 6px;
            border: none;
            background: transparent;
            color: #94a3b8;
            cursor: pointer;
            font-weight: 500;
            transition: all 0.2s;
        }
        .view-btn.active {
            background: rgba(16, 185, 129, 0.2);
            color: #34d399;
        }
        .task-grid {
            display: grid;
            grid-template-columns: repeat(auto-fill, minmax(350px, 1fr));
            gap: 1.5rem;
        }
        .task-card {
            background: linear-gradient(145deg, rgba(30, 41, 59, 0.95), rgba(15, 23, 42, 0.98));
            border: 1px solid rgba(16, 185, 129, 0.2);
            border-radius: 12px;
            padding: 1.5rem;
            box-shadow: 0 4px 24px rgba(0, 0, 0, 0.3);
            transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
            cursor: pointer;
        }
        .task-card:hover {
            border-color: rgba(16, 185, 129, 0.4);
            box-shadow: 0 8px 32px rgba(16, 185, 129, 0.15);
            transform: translateY(-4px);
        }
        .task-card.priority-urgent { border-left: 4px solid #ef4444; }
        .task-card.priority-high { border-left: 4px solid #f59e0b; }
        .task-card.priority-medium { border-left: 4px solid #3b82f6; }
        .task-card.priority-low { border-left: 4px solid #10b981; }
        .task-header {
            display: flex;
            justify-content: space-between;
            align-items: flex-start;
            margin-bottom: 1rem;
        }
        .task-title {
            font-size: 1.125rem;
            font-weight: 600;
            color: #f1f5f9;
            flex: 1;
        }
        .task-badges {
            display: flex;
            gap: 0.5rem;
            flex-wrap: wrap;
            margin-bottom: 1rem;
        }
        .task-description {
            color: #94a3b8;
            font-size: 0.875rem;
            margin-bottom: 1rem;
            line-height: 1.6;
        }
        .task-meta {
            display: flex;
            justify-content: space-between;
            align-items: center;
            padding-top: 1rem;
            border-top: 1px solid rgba(148, 163, 184, 0.1);
        }
        .task-due-date {
            display: inline-flex;
            align-items: center;
            gap: 0.375rem;
            font-size: 0.75rem;
            color: #94a3b8;
            padding: 0.25rem 0.5rem;
            background: rgba(107, 114, 128, 0.15);
            border-radius: 6px;
        }
        .task-due-date.overdue {
            background: rgba(239, 68, 68, 0.15);
            color: #f87171;
        }
        .task-actions {
            display: flex;
            gap: 0.5rem;
        }
        .task-action-btn {
            width: 32px;
            height: 32px;
            border-radius: 8px;
            border: none;
            background: rgba(148, 163, 184, 0.1);
            color: #94a3b8;
            cursor: pointer;
            font-size: 1rem;
            transition: all 0.2s;
        }
        .task-action-btn:hover {
            background: rgba(16, 185, 129, 0.2);
            color: #34d399;
        }
        .task-action-btn.delete:hover {
            background: rgba(239, 68, 68, 0.2);
            color: #f87171;
        }
        .empty-state {
            text-align: center;
            padding: 4rem;
            color: #94a3b8;
        }
        .empty-icon {
            font-size: 4rem;
            margin-bottom: 1rem;
            opacity: 0.5;
        }
        .stats-bar {
            display: flex;
            gap: 1rem;
            margin-top: 1rem;
        }
        .stat-badge {
            background: rgba(255, 255, 255, 0.1);
            padding: 0.5rem 1rem;
            border-radius: 8px;
            font-size: 0.875rem;
            color: white;
        }
        .nav-bar {
            background: rgba(15, 23, 42, 0.95);
            backdrop-filter: blur(12px);
            border-bottom: 1px solid rgba(16, 185, 129, 0.2);
            margin-bottom: 2rem;
        }
        .nav-link {
            color: #94a3b8;
            transition: all 0.2s ease;
            padding: 0.5rem 1rem;
            border-radius: 6px;
            text-decoration: none;
        }
        .nav-link:hover {
            color: #f1f5f9;
            background: rgba(16, 185, 129, 0.15);
        }
        .nav-link.active {
            color: #f1f5f9;
            background: rgba(16, 185, 129, 0.2);
        }
    </style>
</head>
<body>
    <!-- ÂØºËà™Ê†è -->
    <nav class="nav-bar sticky top-0 z-50">
        <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
            <div class="flex items-center justify-between h-16">
                <div class="flex items-center space-x-8">
                    <a href="/" class="flex items-center space-x-2 text-lg font-semibold">
                        <span>üìã</span>
                        <span>LowCode Platform</span>
                    </a>
                    <div class="hidden md:flex items-center space-x-2">
                        <a href="/?project=todo" class="nav-link">
                            <i class="fas fa-home mr-1"></i> È¶ñÈ°µ
                        </a>
                        <a href="/Task?project=todo" class="nav-link active">
                            <i class="fas fa-check-square mr-1"></i> ‰ªªÂä°
                        </a>
                        <a href="/Project?project=todo" class="nav-link">
                            <i class="fas fa-folder mr-1"></i> È°πÁõÆ
                        </a>
                        <a href="/TaskWithProject?project=todo" class="nav-link">
                            <i class="fas fa-chart-pie mr-1"></i> È°πÁõÆ‰ªªÂä°
                        </a>
                    </div>
                </div>
                <div class="flex items-center space-x-4">
                    <select id="project-selector" class="todo-btn todo-btn-secondary text-sm">
                        <option value="todo">‚úÖ TODO</option>
                        <option value="crm">üíº CRM</option>
                        <option value="weather">üå§Ô∏è Â§©Ê∞î</option>
                        <option value="journal">üìî Êó•ËÆ∞</option>
                        <option value="ecommerce">üõí ÁîµÂïÜ</option>
                        <option value="chinook">üéµ Èü≥‰πê</option>
                    </select>
                </div>
            </div>
        </div>
    </nav>

    <div class="task-list-container">
        <!-- È°µÈù¢Ê†áÈ¢ò -->
        <div class="page-header">
            <h1 class="page-title">
                <span class="text-4xl">üìù</span>
                @title
            </h1>
            <div class="stats-bar">
                <div class="stat-badge">
                    <span class="font-bold">@totalTasks</span> @(currentLang == "zh" ? "ÊÄª‰ªªÂä°" : "Total")
                </div>
                <div class="stat-badge">
                    <span class="font-bold">@pendingCount</span> @(currentLang == "zh" ? "ÂæÖÂ§ÑÁêÜ" : "Pending")
                </div>
                <div class="stat-badge">
                    <span class="font-bold">@inProgressCount</span> @(currentLang == "zh" ? "ËøõË°å‰∏≠" : "In Progress")
                </div>
                <div class="stat-badge">
                    <span class="font-bold">@completedCount</span> @(currentLang == "zh" ? "Â∑≤ÂÆåÊàê" : "Completed")
                </div>
            </div>
        </div>

        <!-- Â∑•ÂÖ∑Ê†è -->
        <div class="toolbar">
            <a href="/Task/create?project=@currentProject" class="btn-new-task">
                <i class="fas fa-plus"></i>
                @(currentLang == "zh" ? "Êñ∞Âª∫‰ªªÂä°" : "New Task")
            </a>
            <div class="view-toggle">
                <button class="view-btn active" onclick="setView('grid')">
                    <i class="fas fa-th-large"></i> @(currentLang == "zh" ? "ÁΩëÊ†º" : "Grid")
                </button>
                <button class="view-btn" onclick="setView('list')">
                    <i class="fas fa-list"></i> @(currentLang == "zh" ? "ÂàóË°®" : "List")
                </button>
            </div>
        </div>

        <!-- ‰ªªÂä°ÁΩëÊ†º -->
        <div id="task-grid" class="task-grid">
            @foreach (var task in Model)
            {
                var id = task[def.PrimaryKey]?.ToString() ?? "";
                var titleText = task.ContainsKey("Title") ? task["Title"]?.ToString() ?? "" : "";
                var description = task.ContainsKey("Description") ? task["Description"]?.ToString() ?? "" : "";
                var status = task.ContainsKey("Status") ? task["Status"]?.ToString() ?? "pending" : "pending";
                var priority = task.ContainsKey("Priority") ? task["Priority"]?.ToString() ?? "medium" : "medium";
                var dueDate = task.ContainsKey("DueDate") ? task["DueDate"]?.ToString() ?? "" : "";

                var statusInfo = statusConfig.ContainsKey(status) ? statusConfig[status] : statusConfig["pending"];
                var priorityInfo = priorityConfig.ContainsKey(priority) ? priorityConfig[priority] : priorityConfig["medium"];

                var priorityClass = $"priority-{priority}";
                var isOverdue = !string.IsNullOrEmpty(dueDate) && DateTime.Parse(dueDate) < DateTime.Now && status != "completed";

                <div class="task-card @priorityClass" data-id="@id" data-status="@status" onclick="editTask('@id')">
                    <div class="task-header">
                        <h3 class="task-title">@titleText</h3>
                    </div>
                    <div class="task-badges">
                        <span class="priority-badge @priorityInfo.badge">@priorityInfo.icon @priorityInfo.label</span>
                        <span class="status-badge @statusInfo.color">@statusInfo.icon @statusInfo.label</span>
                    </div>
                    @if (!string.IsNullOrEmpty(description))
                    {
                        <p class="task-description">@description</p>
                    }
                    <div class="task-meta">
                        @if (!string.IsNullOrEmpty(dueDate))
                        {
                            <div class="task-due-date @(isOverdue ? "overdue" : "")">
                                <i class="fas fa-calendar"></i>
                                <span>@dueDate</span>
                            </div>
                        }
                        <div class="task-actions">
                            <button class="task-action-btn" onclick="event.stopPropagation(); editTask('@id')" title="@(currentLang == "zh" ? "ÁºñËæë" : "Edit")">
                                <i class="fas fa-edit"></i>
                            </button>
                            <button class="task-action-btn delete" onclick="event.stopPropagation(); openDeleteDialog('@modelName', '@id')" title="@(currentLang == "zh" ? "Âà†Èô§" : "Delete")">
                                <i class="fas fa-trash"></i>
                            </button>
                        </div>
                    </div>
                </div>
            }
            @if (!Model.Any())
            {
                <div class="empty-state" style="grid-column: 1 / -1;">
                    <div class="empty-icon">üìù</div>
                    <h3>@(currentLang == "zh" ? "ÊöÇÊó†‰ªªÂä°" : "No tasks yet")</h3>
                    <p>@(currentLang == "zh" ? "ÁÇπÂáª\"Êñ∞Âª∫‰ªªÂä°\"ÂºÄÂßãÂàõÂª∫Á¨¨‰∏Ä‰∏™‰ªªÂä°" : "Click \"New Task\" to create your first task")</p>
                </div>
            }
        </div>
    </div>

    <script>
        const API_BASE = '/api';
        const currentProject = '@currentProject';
        const currentLang = '@currentLang';

        // ÂàáÊç¢ËßÜÂõæ
        function setView(view) {
            const grid = document.getElementById('task-grid');
            const btns = document.querySelectorAll('.view-btn');
            
            if (view === 'grid') {
                grid.style.display = 'grid';
                btns[0].classList.add('active');
                btns[1].classList.remove('active');
            } else {
                grid.style.display = 'block';
                btns[0].classList.remove('active');
                btns[1].classList.add('active');
            }
        }

        // ÁºñËæë‰ªªÂä°
        function editTask(id) {
            window.location.href = `/Task/edit/${id}?project=${currentProject}`;
        }

        // ÊâìÂºÄÂà†Èô§ÂØπËØùÊ°Ü
        function openDeleteDialog(model, id) {
            if (confirm(currentLang === 'zh' ? 'Á°ÆÂÆöË¶ÅÂà†Èô§Ê≠§‰ªªÂä°ÂêóÔºü' : 'Are you sure you want to delete this task?')) {
                fetch(`${API_BASE}/${model}/${id}?project=${currentProject}`, {
                    method: 'DELETE',
                    headers: {
                        'Content-Type': 'application/json'
                    }
                })
                .then(response => {
                    if (response.ok) {
                        window.location.reload();
                    } else {
                        alert(currentLang === 'zh' ? 'Âà†Èô§Â§±Ë¥•' : 'Delete failed');
                    }
                })
                .catch(error => {
                    console.error('Error:', error);
                    alert(currentLang === 'zh' ? 'Âà†Èô§Â§±Ë¥•' : 'Delete failed');
                });
            }
        }

        // È°πÁõÆÂàáÊç¢
        document.getElementById('project-selector')?.addEventListener('change', function() {
            window.location.href = `/?project=${this.value}`;
        });
    </script>
</body>
</html>
