@using Platform.Infrastructure.Definitions
@model IEnumerable<Dictionary<string, object>>
@{
    var def = (ModelDefinition)ViewData["ModelDef"]!;
    var modelName = (string)ViewData["ModelName"]!;
    var pageNum = (int)ViewData["Page"]!;
    var size = (int)ViewData["Size"]!;
    var total = (int)ViewData["Total"]!;
    var currentLang = Context.Request.Query["lang"].FirstOrDefault() ?? "en";
    var currentProject = Context.Request.Query["project"].FirstOrDefault() ?? "journal";

    var localizedLabels = currentLang == "zh" ? def.Ui?.Labels?.Zh : def.Ui?.Labels?.En;
    var title = localizedLabels != null && localizedLabels.ContainsKey("title") ? localizedLabels["title"] : modelName;

    // ÂøÉÊÉÖÈÖçÁΩÆ
    var moodConfig = new Dictionary<string, (string emoji, string label, string color)>
    {
        { "happy", ("üòä", currentLang == "zh" ? "ÂºÄÂøÉ" : "Happy", "mood-happy") },
        { "good", ("üôÇ", currentLang == "zh" ? "‰∏çÈîô" : "Good", "mood-good") },
        { "neutral", ("üòê", currentLang == "zh" ? "Âπ≥Èùô" : "Neutral", "mood-neutral") },
        { "bad", ("üòî", currentLang == "zh" ? "Á≥üÁ≥ï" : "Bad", "mood-bad") },
        { "angry", ("üò†", currentLang == "zh" ? "ÁîüÊ∞î" : "Angry", "mood-angry") }
    };

    var stats = Model.GroupBy(e => e.ContainsKey("Mood") ? e["Mood"]?.ToString() : "neutral")
        .ToDictionary(g => g.Key, g => g.Count());
}

<!DOCTYPE html>
<html lang="zh-CN">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@title - Journal</title>
    <script src="https://cdn.tailwindcss.com"></script>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" />
    <link rel="stylesheet" href="/css/journal.css" />
    <style>
        body {
            background: linear-gradient(135deg, #0f172a 0%, #1e293b 50%, #4c1d95 100%);
            min-height: 100vh;
        }
        .entry-list-container {
            max-width: 900px;
            margin: 0 auto;
            padding: 2rem;
        }
        .page-header {
            background: linear-gradient(135deg, #8b5cf6, #7c3aed);
            border-radius: 16px;
            padding: 2rem;
            margin-bottom: 2rem;
            box-shadow: 0 10px 40px rgba(139, 92, 246, 0.3);
        }
        .page-title {
            color: white;
            font-size: 2rem;
            font-weight: 700;
            display: flex;
            align-items: center;
            gap: 0.75rem;
        }
        .stats-bar {
            display: flex;
            gap: 1rem;
            margin-top: 1rem;
        }
        .stat-badge {
            background: rgba(255, 255, 255, 0.1);
            padding: 0.5rem 1rem;
            border-radius: 8px;
            font-size: 0.875rem;
            color: white;
        }
        .toolbar {
            background: rgba(30, 41, 59, 0.8);
            border-radius: 12px;
            padding: 1.25rem;
            margin-bottom: 1.5rem;
            display: flex;
            justify-content: space-between;
            align-items: center;
            border: 1px solid rgba(139, 92, 246, 0.2);
        }
        .btn-write {
            background: linear-gradient(135deg, #8b5cf6, #7c3aed);
            color: white;
            padding: 0.75rem 1.5rem;
            border-radius: 10px;
            text-decoration: none;
            font-weight: 600;
            display: inline-flex;
            align-items: center;
            gap: 0.5rem;
            transition: all 0.2s;
        }
        .btn-write:hover {
            background: linear-gradient(135deg, #7c3aed, #6d28d9);
            box-shadow: 0 4px 16px rgba(139, 92, 246, 0.4);
            transform: translateY(-1px);
        }
        .search-form {
            display: flex;
            gap: 0.5rem;
        }
        .search-input {
            padding: 0.5rem 1rem;
            border: 1px solid rgba(139, 92, 246, 0.3);
            border-radius: 8px;
            background: rgba(15, 23, 42, 0.6);
            color: #f1f5f9;
            width: 250px;
        }
        .search-input:focus {
            outline: none;
            border-color: #8b5cf6;
            box-shadow: 0 0 0 3px rgba(139, 92, 246, 0.1);
        }
        .btn-search {
            padding: 0.5rem 1rem;
            background: #8b5cf6;
            color: white;
            border: none;
            border-radius: 8px;
            cursor: pointer;
            transition: all 0.2s;
        }
        .btn-search:hover {
            background: #7c3aed;
        }
        .mood-filter {
            padding: 0.5rem 1rem;
            border: 1px solid rgba(139, 92, 246, 0.3);
            border-radius: 8px;
            background: rgba(30, 41, 59, 0.8);
            color: #f1f5f9;
            cursor: pointer;
        }
        .mood-filter:focus {
            outline: none;
            border-color: #8b5cf6;
        }
        .entry-timeline {
            position: relative;
            padding-left: 2rem;
        }
        .entry-timeline::before {
            content: '';
            position: absolute;
            left: 0;
            top: 0;
            bottom: 0;
            width: 2px;
            background: linear-gradient(to bottom, rgba(139, 92, 246, 0.5), transparent);
        }
        .entry-card {
            position: relative;
            margin-bottom: 1.5rem;
            background: linear-gradient(145deg, rgba(30, 41, 59, 0.95), rgba(15, 23, 42, 0.98));
            border: 1px solid rgba(139, 92, 246, 0.2);
            border-radius: 12px;
            padding: 1.5rem;
            box-shadow: 0 4px 24px rgba(0, 0, 0, 0.3);
            transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
            cursor: pointer;
        }
        .entry-card::before {
            content: '';
            position: absolute;
            left: -2.5rem;
            top: 2rem;
            width: 1rem;
            height: 1rem;
            border-radius: 50%;
            background: var(--mood-color, #8b5cf6);
            border: 2px solid rgba(139, 92, 246, 0.3);
        }
        .entry-card:hover {
            border-color: rgba(139, 92, 246, 0.4);
            box-shadow: 0 8px 32px rgba(139, 92, 246, 0.15);
            transform: translateY(-4px);
        }
        .entry-header {
            display: flex;
            justify-content: space-between;
            align-items: flex-start;
            margin-bottom: 1rem;
        }
        .entry-title {
            font-size: 1.25rem;
            font-weight: 600;
            color: #f1f5f9;
            margin-bottom: 0.5rem;
        }
        .entry-meta {
            display: flex;
            gap: 1rem;
            align-items: center;
            margin-bottom: 1rem;
        }
        .entry-date {
            color: #94a3b8;
            font-size: 0.875rem;
            display: inline-flex;
            align-items: center;
            gap: 0.375rem;
        }
        .entry-excerpt {
            color: #94a3b8;
            line-height: 1.7;
            margin-bottom: 1rem;
        }
        .entry-actions {
            display: flex;
            gap: 0.5rem;
            opacity: 0;
            transition: opacity 0.2s;
        }
        .entry-card:hover .entry-actions {
            opacity: 1;
        }
        .action-btn {
            width: 32px;
            height: 32px;
            border-radius: 8px;
            border: none;
            background: rgba(148, 163, 184, 0.1);
            color: #94a3b8;
            cursor: pointer;
            font-size: 1rem;
            transition: all 0.2s;
        }
        .action-btn:hover {
            background: rgba(139, 92, 246, 0.2);
            color: #c4b5fd;
        }
        .action-btn.delete:hover {
            background: rgba(239, 68, 68, 0.2);
            color: #f87171;
        }
        .empty-state {
            text-align: center;
            padding: 4rem;
            color: #94a3b8;
        }
        .empty-icon {
            font-size: 4rem;
            margin-bottom: 1rem;
            opacity: 0.5;
        }
        .nav-bar {
            background: rgba(15, 23, 42, 0.95);
            backdrop-filter: blur(12px);
            border-bottom: 1px solid rgba(139, 92, 246, 0.2);
            margin-bottom: 2rem;
        }
        .nav-link {
            color: #94a3b8;
            transition: all 0.2s ease;
            padding: 0.5rem 1rem;
            border-radius: 6px;
            text-decoration: none;
        }
        .nav-link:hover {
            color: #f1f5f9;
            background: rgba(139, 92, 246, 0.15);
        }
        .nav-link.active {
            color: #f1f5f9;
            background: rgba(139, 92, 246, 0.2);
        }
        .pagination {
            display: flex;
            justify-content: center;
            gap: 0.5rem;
            margin-top: 2rem;
        }
        .pagination-btn {
            padding: 0.5rem 1rem;
            background: rgba(30, 41, 59, 0.8);
            border: 1px solid rgba(139, 92, 246, 0.3);
            border-radius: 8px;
            color: #c4b5fd;
            text-decoration: none;
            transition: all 0.2s;
        }
        .pagination-btn:hover {
            background: #8b5cf6;
            color: white;
        }
    </style>
</head>
<body>
    <!-- ÂØºËà™Ê†è -->
    <nav class="nav-bar sticky top-0 z-50">
        <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
            <div class="flex items-center justify-between h-16">
                <div class="flex items-center space-x-8">
                    <a href="/" class="flex items-center space-x-2 text-lg font-semibold">
                        <span>üìã</span>
                        <span>LowCode Platform</span>
                    </a>
                    <div class="hidden md:flex items-center space-x-2">
                        <a href="/?project=journal" class="nav-link">
                            <i class="fas fa-home mr-1"></i> È¶ñÈ°µ
                        </a>
                        <a href="/Entry?project=journal" class="nav-link active">
                            <i class="fas fa-book-open mr-1"></i> Êó•ËÆ∞
                        </a>
                        <a href="/Category?project=journal" class="nav-link">
                            <i class="fas fa-folder mr-1"></i> ÂàÜÁ±ª
                        </a>
                        <a href="/Tag?project=journal" class="nav-link">
                            <i class="fas fa-tags mr-1"></i> Ê†áÁ≠æ
                        </a>
                    </div>
                </div>
                <div class="flex items-center space-x-4">
                    <select id="project-selector" class="journal-btn journal-btn-secondary text-sm">
                        <option value="journal">üìî Journal</option>
                        <option value="todo">‚úÖ TODO</option>
                        <option value="crm">üíº CRM</option>
                        <option value="weather">üå§Ô∏è Â§©Ê∞î</option>
                        <option value="ecommerce">üõí ÁîµÂïÜ</option>
                        <option value="chinook">üéµ Èü≥‰πê</option>
                    </select>
                </div>
            </div>
        </div>
    </nav>

    <div class="entry-list-container">
        <!-- È°µÈù¢Ê†áÈ¢ò -->
        <div class="page-header">
            <h1 class="page-title">
                <span class="text-4xl">üìñ</span>
                @title
            </h1>
            <div class="stats-bar">
                <div class="stat-badge">
                    <span class="font-bold">@total</span> @(currentLang == "zh" ? "ÁØáÊó•ËÆ∞" : "Entries")
                </div>
                @{
                    var happyCount = stats.GetValueOrDefault("happy", 0);
                    var goodCount = stats.GetValueOrDefault("good", 0);
                    var neutralCount = stats.GetValueOrDefault("neutral", 0);
                }
                <div class="stat-badge">
                    <span class="font-bold">@happyCount</span> üòä
                </div>
                <div class="stat-badge">
                    <span class="font-bold">@goodCount</span> üôÇ
                </div>
                <div class="stat-badge">
                    <span class="font-bold">@neutralCount</span> üòê
                </div>
            </div>
        </div>

        <!-- Â∑•ÂÖ∑Ê†è -->
        <div class="toolbar">
            <a href="/Entry/create?project=@currentProject" class="btn-write">
                <i class="fas fa-pen-fancy"></i>
                @(currentLang == "zh" ? "ÂÜôÊó•ËÆ∞" : "Write")
            </a>
            <div class="toolbar-right" style="display: flex; gap: 1rem; align-items: center;">
                <form class="search-form" method="get" action="/Entry?project=@currentProject">
                    <input type="text" name="Title" placeholder="@(currentLang == "zh" ? "ÊêúÁ¥¢Êó•ËÆ∞..." : "Search...")"
                           value="@(Context.Request.Query["Title"].FirstOrDefault() ?? "")"
                           class="search-input" />
                    <button type="submit" class="btn-search">
                        <i class="fas fa-search"></i>
                    </button>
                </form>
                <select name="Mood" class="mood-filter" onchange="location.href='/Entry?project=@currentProject&Mood=' + this.value">
                    <option value="">@(currentLang == "zh" ? "ÊâÄÊúâÂøÉÊÉÖ" : "All Moods")</option>
                    @foreach (var mood in moodConfig)
                    {
                        <option value="@mood.Key" selected="@(Context.Request.Query["Mood"].FirstOrDefault() == mood.Key ? "selected" : null)">
                            @mood.Value.emoji @mood.Value.label
                        </option>
                    }
                </select>
            </div>
        </div>

        <!-- Êó•ËÆ∞Êó∂Èó¥Á∫ø -->
        <div class="entry-timeline" id="entry-list">
            @foreach (var entry in Model)
            {
                var id = entry[def.PrimaryKey]?.ToString() ?? "";
                var titleText = entry.ContainsKey("Title") ? entry["Title"]?.ToString() ?? "" : "";
                var content = entry.ContainsKey("Content") ? entry["Content"]?.ToString() ?? "" : "";
                var mood = entry.ContainsKey("Mood") ? entry["Mood"]?.ToString() ?? "neutral" : "neutral";
                var dateStr = entry.ContainsKey("Date") ? entry["Date"]?.ToString() ?? "" : "";

                var moodInfo = moodConfig.ContainsKey(mood) ? moodConfig[mood] : moodConfig["neutral"];
                var excerpt = content.Length > 150 ? content.Substring(0, 150) + "..." : content;

                // Ê†ºÂºèÂåñÊó•Êúü
                var displayDate = dateStr;
                if (DateTime.TryParse(dateStr, out var parsedDate))
                {
                    displayDate = currentLang == "zh"
                        ? parsedDate.ToString("yyyy Âπ¥ MM Êúà dd Êó•")
                        : parsedDate.ToString("MMMM dd, yyyy");
                }

                <article class="entry-card" style="--mood-color: @(mood == "happy" ? "#fbbf24" : mood == "good" ? "#34d399" : mood == "bad" ? "#f87171" : mood == "angry" ? "#fca5a5" : "#9ca3af")"
                         data-id="@id" data-mood="@mood" onclick="editEntry('@id')">
                    <div class="entry-header">
                        <h3 class="entry-title">@titleText</h3>
                        <div class="entry-actions">
                            <button class="action-btn" onclick="event.stopPropagation(); editEntry('@id')" title="@(currentLang == "zh" ? "ÁºñËæë" : "Edit")">
                                <i class="fas fa-edit"></i>
                            </button>
                            <button class="action-btn delete" onclick="event.stopPropagation(); openDeleteDialog('@modelName', '@id')" title="@(currentLang == "zh" ? "Âà†Èô§" : "Delete")">
                                <i class="fas fa-trash"></i>
                            </button>
                        </div>
                    </div>
                    <div class="entry-meta">
                        <span class="entry-date">
                            <i class="far fa-calendar"></i>
                            @displayDate
                        </span>
                        <span class="mood-badge @moodInfo.color">
                            @moodInfo.emoji @moodInfo.label
                        </span>
                    </div>
                    @if (!string.IsNullOrEmpty(excerpt))
                    {
                        <p class="entry-excerpt">@excerpt</p>
                    }
                </article>
            }
            @if (!Model.Any())
            {
                <div class="empty-state">
                    <div class="empty-icon">üìñ</div>
                    <h3>@(currentLang == "zh" ? "ËøòÊ≤°ÊúâÊó•ËÆ∞" : "No entries yet")</h3>
                    <p>@(currentLang == "zh" ? "ÂºÄÂßãÂÜô‰∏ã‰Ω†ÁöÑÁ¨¨‰∏ÄÁØáÊó•ËÆ∞ÂêßÔºÅ" : "Start writing your first entry!")</p>
                    <a href="/Entry/create?project=@currentProject" class="btn-write" style="margin-top: 1rem;">
                        <i class="fas fa-pen-fancy"></i> @(currentLang == "zh" ? "ÂÜôÊó•ËÆ∞" : "Write now")
                    </a>
                </div>
            }
        </div>

        <!-- ÂàÜÈ°µ -->
        @{
            var totalPages = (int)Math.Ceiling((double)total / size);
        }
        @if (totalPages > 1)
        {
            <nav class="pagination">
                @if (pageNum > 1)
                {
                    <a href="/Entry?project=@currentProject&page=1" class="pagination-btn">
                        <i class="fas fa-angle-double-left"></i>
                    </a>
                    <a href="/Entry?project=@currentProject&page=@(pageNum-1)" class="pagination-btn">
                        <i class="fas fa-angle-left"></i>
                    </a>
                }

                <span class="pagination-btn" style="cursor: default;">
                    @(currentLang == "zh" ? "Á¨¨" : "Page") @pageNum @(currentLang == "zh" ? "È°µÔºåÂÖ±" : "of") @totalPages @(currentLang == "zh" ? "È°µ" : "pages")
                </span>

                @if (pageNum < totalPages)
                {
                    <a href="/Entry?project=@currentProject&page=@(pageNum+1)" class="pagination-btn">
                        <i class="fas fa-angle-right"></i>
                    </a>
                    <a href="/Entry?project=@currentProject&page=@totalPages" class="pagination-btn">
                        <i class="fas fa-angle-double-right"></i>
                    </a>
                }
            </nav>
        }
    </div>

    <script>
        const API_BASE = '/api';
        const currentProject = '@currentProject';
        const currentLang = '@currentLang';

        // ÁºñËæëÊó•ËÆ∞
        function editEntry(id) {
            window.location.href = `/Entry/edit/${id}?project=${currentProject}`;
        }

        // ÊâìÂºÄÂà†Èô§ÂØπËØùÊ°Ü
        function openDeleteDialog(model, id) {
            if (confirm(currentLang === 'zh' ? 'Á°ÆÂÆöË¶ÅÂà†Èô§Ê≠§Êó•ËÆ∞ÂêóÔºü' : 'Are you sure you want to delete this entry?')) {
                fetch(`${API_BASE}/${model}/${id}?project=${currentProject}`, {
                    method: 'DELETE',
                    headers: {
                        'Content-Type': 'application/json'
                    }
                })
                .then(response => {
                    if (response.ok) {
                        window.location.reload();
                    } else {
                        alert(currentLang === 'zh' ? 'Âà†Èô§Â§±Ë¥•' : 'Delete failed');
                    }
                })
                .catch(error => {
                    console.error('Error:', error);
                    alert(currentLang === 'zh' ? 'Âà†Èô§Â§±Ë¥•' : 'Delete failed');
                });
            }
        }

        // È°πÁõÆÂàáÊç¢
        document.getElementById('project-selector')?.addEventListener('change', function() {
            window.location.href = `/?project=${this.value}`;
        });
    </script>
</body>
</html>
