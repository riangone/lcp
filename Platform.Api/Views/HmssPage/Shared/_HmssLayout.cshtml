<!DOCTYPE html>
<html lang="zh-CN">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - HMSS</title>
    
    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    
    <!-- Bootstrap Icons -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.0/font/bootstrap-icons.css" rel="stylesheet">
    
    <!-- Custom CSS -->
    <link href="/css/hmss-theme.css" rel="stylesheet" />
    
    @await RenderSectionAsync("Styles", required: false)
</head>
<body>
    <div class="hmss-wrapper">
        <!-- 侧边栏 -->
        <aside class="hmss-sidebar">
            <div class="sidebar-header">
                <a href="/hmss/master" class="sidebar-brand">
                    <i class="bi bi-speedometer2"></i>
                    <span>HMSS</span>
                </a>
                <button class="sidebar-toggle d-lg-none" type="button">
                    <i class="bi bi-list"></i>
                </button>
            </div>
            
            <nav class="sidebar-nav">
                <div class="nav-section">
                    <div class="nav-section-title">系统导航</div>
                    <ul class="nav-list">
                        <li class="nav-item">
                            <a href="/hmss/master" class="nav-link">
                                <i class="bi bi-house-gear"></i>
                                <span>Master</span>
                            </a>
                        </li>
                        <li class="nav-item">
                            <a href="/hmss/sdh" class="nav-link">
                                <i class="bi bi-car-front"></i>
                                <span>SDH 车检替代</span>
                            </a>
                        </li>
                        <li class="nav-item">
                            <a href="/hmss/hdkaikei" class="nav-link">
                                <i class="bi bi-calculator"></i>
                                <span>HDKAIKEI 会计</span>
                            </a>
                        </li>
                        <li class="nav-item">
                            <a href="/hmss/hmhrms" class="nav-link">
                                <i class="bi bi-people"></i>
                                <span>HMHRMS 人力资源</span>
                            </a>
                        </li>
                        <li class="nav-item">
                            <a href="/hmss/jksys" class="nav-link">
                                <i class="bi bi-currency-yen"></i>
                                <span>JKSYS 人事給与</span>
                            </a>
                        </li>
                    </ul>
                </div>
            </nav>
            
            <div class="sidebar-footer">
                <div class="user-info">
                    <i class="bi bi-person-circle"></i>
                    <span class="user-name">@User.Identity?.Name ?? "Guest"</span>
                </div>
                <form asp-action="Logout" asp-controller="HmssAuth" method="post" class="d-inline">
                    <button type="submit" class="btn btn-link btn-sm logout-btn">
                        <i class="bi bi-box-arrow-right"></i>
                        <span>退出</span>
                    </button>
                </form>
            </div>
        </aside>
        
        <!-- 主内容区 -->
        <main class="hmss-main">
            <!-- 顶栏 -->
            <header class="hmss-header">
                <div class="header-left">
                    <button class="sidebar-toggle d-none d-lg-block" type="button">
                        <i class="bi bi-list"></i>
                    </button>
                    <nav aria-label="breadcrumb" class="header-breadcrumb">
                        <ol class="breadcrumb mb-0">
                            <li class="breadcrumb-item"><a href="/hmss/master">Home</a></li>
                            @if (ViewData["Breadcrumb1"] != null)
                            {
                                <li class="breadcrumb-item active">@ViewData["Breadcrumb1"]</li>
                            }
                        </ol>
                    </nav>
                </div>
                <div class="header-right">
                    <div class="header-search">
                        <input type="text" class="form-control" placeholder="搜索...">
                        <i class="bi bi-search"></i>
                    </div>
                    <div class="header-actions">
                        <button class="btn btn-icon" title="通知">
                            <i class="bi bi-bell"></i>
                            <span class="badge">3</span>
                        </button>
                        <div class="dropdown">
                            <button class="btn btn-icon dropdown-toggle" type="button" data-bs-toggle="dropdown">
                                <i class="bi bi-gear"></i>
                            </button>
                            <ul class="dropdown-menu dropdown-menu-end">
                                <li><a class="dropdown-item" href="#"><i class="bi bi-person"></i> 个人信息</a></li>
                                <li><a class="dropdown-item" href="#"><i class="bi bi-gear"></i> 设置</a></li>
                                <li><hr class="dropdown-divider"></li>
                                <li><a class="dropdown-item" href="/hmss/login"><i class="bi bi-box-arrow-right"></i> 退出</a></li>
                            </ul>
                        </div>
                    </div>
                </div>
            </header>
            
            <!-- 页面内容 -->
            <div class="hmss-content">
                @RenderBody()
            </div>
        </main>
    </div>
    
    <!-- Bootstrap JS -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    
    <!-- Custom JS -->
    <script src="/js/hmss-app.js"></script>
    
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
