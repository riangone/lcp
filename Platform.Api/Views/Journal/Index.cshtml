        }

        // åŠ è½½å¿ƒæƒ…åˆ†å¸ƒ
        async function loadMoodDistribution() {
            try {
                const response = await fetch(`${API_BASE}/Entry?project=${currentProject}`);
                const entries = await response.json();

                const moodCounts = {};
                Object.keys(moodConfig).forEach(m => moodCounts[m] = 0);
                entries.forEach(e => {
                    const mood = e.Mood || 'neutral';
                    moodCounts[mood] = (moodCounts[mood] || 0) + 1;
                });

                const total = entries.length || 1;
                const container = document.getElementById('mood-distribution');

                container.innerHTML = Object.entries(moodConfig).map(([key, config]) => {
                    const count = moodCounts[key] || 0;
                    const percent = Math.round((count / total) * 100);
                    return `
                        <div>
                            <div class="flex justify-between mb-2">
                                <span class="text-slate-300">${config.emoji} ${config.label}</span>
                                <span class="text-slate-400">${count} (${percent}%)</span>
                            </div>
                            <div class="w-full bg-slate-700 rounded-full h-2.5">
                                <div class="bg-gradient-to-r from-violet-500 to-fuchsia-500 h-2.5 rounded-full" style="width: ${percent}%"></div>
                            </div>
                        </div>
                    `;
                }).join('');
            } catch (error) {
                console.error('Error loading mood distribution:', error);
            }
        }

