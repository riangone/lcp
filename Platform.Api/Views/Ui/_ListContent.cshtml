@using Platform.Infrastructure.Definitions
@model IEnumerable<Dictionary<string, object>>
@{
    var def = (ModelDefinition)ViewData["ModelDef"]!;
    var modelName = (string)ViewData["ModelName"]!;
    var pageNum =  (int)ViewData["Page"]!;
    var size = (int)ViewData["Size"]!;
    var total = (int)ViewData["Total"]!;
    var totalPages = (int)Math.Ceiling((double)total / size);
    var currentLang = Context.Request.Query["lang"].FirstOrDefault() ?? ViewData["Lang"] as string ?? "en";
    var currentSortBy = (ViewData["SortBy"] as string) ?? def.PrimaryKey;
    var currentSortDir = string.Equals(ViewData["SortDir"] as string, "desc", StringComparison.OrdinalIgnoreCase)
        ? "desc"
        : "asc";
    var isReadOnly = def.IsReadOnly;
    var currentEditMode = string.Equals(ViewData["EditMode"] as string, "page", StringComparison.OrdinalIgnoreCase)
        ? "page"
        : "modal";
    var currentProject = Context.Request.Query["project"].FirstOrDefault() ?? "app";
    var currentFilterValues = (def.List?.Filters?.Keys ?? Enumerable.Empty<string>())
        .ToDictionary(k => k, k => Context.Request.Query[k].FirstOrDefault() ?? "");

    string BuildListUrl(
        int? page = null,
        string? sortBy = null,
        string? sortDir = null,
        int? pageSize = null,
        string? editMode = null)
    {
        var query = new Dictionary<string, string>();

        foreach (var f in currentFilterValues)
        {
            if (!string.IsNullOrWhiteSpace(f.Value))
            {
                query[f.Key] = f.Value;
            }
        }

        query["page"] = (page ?? pageNum).ToString();
        query["size"] = (pageSize ?? size).ToString();
        query["lang"] = currentLang;
        query["sortBy"] = sortBy ?? currentSortBy;
        query["sortDir"] = sortDir ?? currentSortDir;
        query["editMode"] = editMode ?? currentEditMode;
        query["project"] = currentProject;

        var queryString = string.Join("&", query.Select(kv =>
            $"{Uri.EscapeDataString(kv.Key)}={Uri.EscapeDataString(kv.Value)}"));

        return $"/ui/{modelName}?{queryString}";
    }

    string RenderValue(ModelDefinition def, string col, object val)
    {
        if (def.Form != null
            && def.Form.Fields.TryGetValue(col, out var f)
            && f.Type == "select"
            && f.Options != null
            && f.Options.TryGetValue(val.ToString()!, out var label))
        {
            return label;
        }
        return val?.ToString() ?? "";
    }
}

@{
    var uiLabels = def.Ui?.Labels;
    Dictionary<string, string>? localizedLabels = null;

    if (uiLabels != null)
    {
        if (currentLang == "zh" && uiLabels.Zh != null)
        {
            localizedLabels = uiLabels.Zh;
        }
        else if (currentLang == "en" && uiLabels.En != null)
        {
            localizedLabels = uiLabels.En;
        }
    }

    if (localizedLabels == null)
    {
        localizedLabels = new Dictionary<string, string>();
    }

    var title = localizedLabels.ContainsKey("title") ? localizedLabels["title"] : modelName;
    var createButtonLabel = localizedLabels.ContainsKey("create_button") ? localizedLabels["create_button"] : "Add " + modelName;
    var filterButtonLabel = localizedLabels.ContainsKey("filter_button") ? localizedLabels["filter_button"] : "Filter";
    var clearButtonLabel = localizedLabels.ContainsKey("clear_button") ? localizedLabels["clear_button"] : "Clear";
    var searchPlaceholder = localizedLabels.ContainsKey("search_placeholder") ? localizedLabels["search_placeholder"] : "Search...";
    var cardClass = def.Ui?.Styles?.CardClass ?? "card";
    var buttonClass = def.Ui?.Styles?.ButtonClass ?? "btn";
}

  <div class="mb-8">
    <h1 class="text-3xl font-bold text-gray-800 mb-2">@title</h1>
    <p class="text-gray-600">Manage your @modelName records</p>
    @if (isReadOnly)
    {
      <p class="text-amber-700 text-sm mt-2">Read-only data source (query/view): create, edit and delete are disabled.</p>
    }
  </div>

  @if (def.List?.Filters != null && def.List.Filters.Any())
  {
    <div class="card mb-6">
      <form hx-get="/ui/@modelName?project=@currentProject" hx-target="#list" hx-swap="innerHTML" hx-push-url="true" class="space-y-4">
        <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-4">
          @foreach (var f in def.List.Filters)
          {
            var label = f.Value.Label;
            // 尝试获取本地化标签
            if(localizedLabels != null && localizedLabels.ContainsKey(f.Key))
            {
                label = localizedLabels[f.Key];
            }
            <div>
              <label class="block text-sm font-medium text-gray-700 mb-1">@label</label>
              @if (f.Value.Type == "select")
              {
                <select name="@f.Key" class="w-full px-3 py-2 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-transparent">
                  <option value="">All</option>
                  @if (f.Value.Options != null)
                  {
                    @foreach (var o in f.Value.Options)
                    {
                      <option value="@o.Key"
                              selected="@(Context.Request.Query[f.Key].FirstOrDefault() == o.Key ? "selected" : null)">
                        @o.Value
                      </option>
                    }
                  }
                </select>
              }
              else
              {
                <input name="@f.Key" value="@(Context.Request.Query[f.Key].FirstOrDefault() ?? "")" placeholder="@searchPlaceholder"
                       class="w-full px-3 py-2 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-transparent" />
              }
            </div>
          }
        </div>

        <input type="hidden" name="sortBy" value="@currentSortBy" />
        <input type="hidden" name="sortDir" value="@currentSortDir" />
        <input type="hidden" name="editMode" value="@currentEditMode" />

        <div class="flex flex-wrap gap-3 mt-4">
          <button type="submit" class="btn btn-primary">
            <i class="fas fa-search mr-2"></i>@filterButtonLabel
          </button>
          <button type="submit" name="clear" value="true" class="btn btn-outline">
            <i class="fas fa-times mr-2"></i>@clearButtonLabel
          </button>
        </div>
      </form>
    </div>
  }

  <div class="flex flex-wrap justify-between items-center mb-6">
    @if (!isReadOnly && currentEditMode == "page")
    {
      var createPageUrl = $"/ui/{modelName}/create?editMode=page&returnUrl={Uri.EscapeDataString(BuildListUrl())}";
      <a href="@createPageUrl" class="btn btn-success flex items-center">
        <i class="fas fa-plus mr-2"></i>
        @if (localizedLabels != null && localizedLabels.ContainsKey("new_button"))
        {
            @localizedLabels["new_button"]
        }
        else
        {
            @:New
        }
      </a>
    }
    else if (!isReadOnly)
    {
      <button hx-get="/ui/@modelName/create?lang=@currentLang&editMode=modal&project=@currentProject" hx-target="#modal" hx-swap="innerHTML"
              class="btn btn-success flex items-center">
        <i class="fas fa-plus mr-2"></i>
        @if (localizedLabels != null && localizedLabels.ContainsKey("new_button"))
        {
            @localizedLabels["new_button"]
        }
        else
        {
            @:New
        }
      </button>
    }

    <div class="text-gray-600 mt-2 sm:mt-0">
      Showing @((pageNum-1)*size + 1)-@(Math.Min(pageNum*size, total)) of @total records
    </div>
  </div>

  <div class="flex flex-wrap items-center justify-end gap-4 mb-4">
    @if (!isReadOnly)
    {
    <form hx-get="/ui/@modelName?project=@currentProject" hx-target="#list" hx-swap="innerHTML" class="flex items-center gap-2">
      <label class="text-sm text-gray-600" for="edit-mode-select">Edit mode:</label>
      <select id="edit-mode-select" name="editMode" class="border border-gray-300 rounded-lg px-2 py-1 text-sm"
              onchange="this.form.requestSubmit()">
        <option value="modal" selected="@(currentEditMode == "modal" ? "selected" : null)">Popup</option>
        <option value="page" selected="@(currentEditMode == "page" ? "selected" : null)">Page</option>
      </select>

      <input type="hidden" name="page" value="1" />
      <input type="hidden" name="size" value="@size" />
      <input type="hidden" name="sortBy" value="@currentSortBy" />
      <input type="hidden" name="sortDir" value="@currentSortDir" />
      @foreach (var f in currentFilterValues)
      {
        if (!string.IsNullOrWhiteSpace(f.Value))
        {
          <input type="hidden" name="@f.Key" value="@f.Value" />
        }
      }
    </form>
    }

    <form hx-get="/ui/@modelName?project=@currentProject" hx-target="#list" hx-swap="innerHTML" class="flex items-center gap-2">
      <label class="text-sm text-gray-600" for="page-size-select">Rows per page:</label>
      <select id="page-size-select" name="size" class="border border-gray-300 rounded-lg px-2 py-1 text-sm"
              onchange="this.form.requestSubmit()">
        @foreach (var pageSize in new[] { 10, 20, 50, 100 })
        {
          <option value="@pageSize" selected="@(size == pageSize ? "selected" : null)">@pageSize</option>
        }
      </select>

      <input type="hidden" name="page" value="1" />
      <input type="hidden" name="sortBy" value="@currentSortBy" />
      <input type="hidden" name="sortDir" value="@currentSortDir" />
      <input type="hidden" name="editMode" value="@currentEditMode" />
      @foreach (var f in currentFilterValues)
      {
        if (!string.IsNullOrWhiteSpace(f.Value))
        {
          <input type="hidden" name="@f.Key" value="@f.Value" />
        }
      }
    </form>
  </div>

  <div id="modal"></div>

  @if (def.List?.Columns != null && def.List.Columns.Any())
  {
    <div class="card overflow-x-auto">
      <table class="table w-full">
        <thead>
          <tr class="bg-gray-50">
            @foreach (var col in def.List.Columns)
            {
              var isCurrentSort = string.Equals(currentSortBy, col, StringComparison.OrdinalIgnoreCase);
              var nextSortDir = isCurrentSort && currentSortDir == "asc" ? "desc" : "asc";
              var sortIcon = isCurrentSort ? (currentSortDir == "asc" ? "↑" : "↓") : "";
              <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
                <a href="#"
                   class="inline-flex items-center gap-1 hover:text-gray-700"
                   hx-get="@BuildListUrl(1, col, nextSortDir)"
                   hx-target="#list"
                   hx-swap="innerHTML">
                  @if (localizedLabels != null && localizedLabels.ContainsKey(col))
                  {
                      @localizedLabels[col]
                  }
                  else
                  {
                      @col
                  }
                  <span>@sortIcon</span>
                </a>
              </th>
            }
            <th class="px-6 py-3 text-right text-xs font-medium text-gray-500 uppercase tracking-wider">
            @if (localizedLabels != null && localizedLabels.ContainsKey("Actions"))
            {
                @localizedLabels["Actions"]
            }
            else
            {
                @:Actions
            }
            </th>
          </tr>
        </thead>
        <tbody class="bg-white divide-y divide-gray-200">
          @foreach (var row in Model)
          {
            <tr class="hover:bg-gray-50 transition-colors" data-id="@row[def.PrimaryKey]">
              @foreach (var col in def.List.Columns)
              {
                <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-900">
                  @RenderValue(def, col, row[col])
                </td>
              }
              @if (isReadOnly)
              {
                var detailsLabel = localizedLabels.ContainsKey("details_button") ? localizedLabels["details_button"] : "Details";
                var detailsId = row[def.PrimaryKey]?.ToString() ?? "";
                var detailsUrl = $"/ui/{modelName}/details/{Uri.EscapeDataString(detailsId)}?lang={Uri.EscapeDataString(currentLang)}&returnUrl={Uri.EscapeDataString(BuildListUrl())}";
                <td class="px-6 py-4 whitespace-nowrap text-right text-sm font-medium">
                  <a class="text-blue-600 hover:text-blue-900 transition-colors" href="@detailsUrl">
                    <i class="fas fa-circle-info mr-1"></i>@detailsLabel
                  </a>
                </td>
              }
              else
              {
              <td class="px-6 py-4 whitespace-nowrap text-right text-sm font-medium">
                @if (currentEditMode == "page")
                {
                  var editId = row[def.PrimaryKey]?.ToString() ?? "";
                  var returnUrl = BuildListUrl();
                  var editPageUrl = $"/ui/{modelName}/edit/{Uri.EscapeDataString(editId)}?editMode=page&returnUrl={Uri.EscapeDataString(returnUrl)}";
                  <a class="text-blue-600 hover:text-blue-900 mr-3 transition-colors" href="@editPageUrl">
                    <i class="fas fa-edit mr-1"></i>
                    @if (localizedLabels != null && localizedLabels.ContainsKey("edit_button"))
                    {
                        @localizedLabels["edit_button"]
                    }
                    else
                    {
                        @:Edit
                    }
                  </a>
                }
                else
                {
                  <button class="text-blue-600 hover:text-blue-900 mr-3 transition-colors"
                          hx-get="/ui/@modelName/edit/@row[def.PrimaryKey]?lang=@currentLang&editMode=modal&project=@currentProject" hx-target="#modal" hx-swap="innerHTML">
                    <i class="fas fa-edit mr-1"></i>
                    @if (localizedLabels != null && localizedLabels.ContainsKey("edit_button"))
                    {
                        @localizedLabels["edit_button"]
                    }
                    else
                    {
                        @:Edit
                    }
                  </button>
                }
                <button class="text-red-600 hover:text-red-900 transition-colors"
                        onclick="openDeleteDialog('@modelName', '@row[def.PrimaryKey]')">
                  <i class="fas fa-trash mr-1"></i>
                  @if (localizedLabels != null && localizedLabels.ContainsKey("delete_button"))
                  {
                      @localizedLabels["delete_button"]
                  }
                  else
                  {
                      @:Delete
                  }
                </button>
              </td>
              }
            </tr>
          }
        </tbody>
      </table>
    </div>
  }

  @if(totalPages > 1)
  {
    <nav class="flex items-center justify-between border-t border-gray-200 px-4 py-3 sm:px-6 mt-6">
      <div class="flex flex-1 justify-between sm:hidden">
        @if(pageNum > 1)
        {
          <a href="#" class="relative inline-flex items-center rounded-md border border-gray-300 bg-white px-4 py-2 text-sm font-medium text-gray-700 hover:bg-gray-50"
             hx-get="@BuildListUrl(1)" hx-target="#list" hx-swap="innerHTML">
            First
          </a>
          <a href="#" class="relative ml-3 inline-flex items-center rounded-md border border-gray-300 bg-white px-4 py-2 text-sm font-medium text-gray-700 hover:bg-gray-50"
             hx-get="@BuildListUrl(pageNum-1)" hx-target="#list" hx-swap="innerHTML">
            Previous
          </a>
        }
        @if(pageNum < totalPages)
        {
          <a href="#" class="relative ml-3 inline-flex items-center rounded-md border border-gray-300 bg-white px-4 py-2 text-sm font-medium text-gray-700 hover:bg-gray-50"
             hx-get="@BuildListUrl(pageNum+1)" hx-target="#list" hx-swap="innerHTML">
            Next
          </a>
          <a href="#" class="relative ml-3 inline-flex items-center rounded-md border border-gray-300 bg-white px-4 py-2 text-sm font-medium text-gray-700 hover:bg-gray-50"
             hx-get="@BuildListUrl(totalPages)" hx-target="#list" hx-swap="innerHTML">
            Last
          </a>
        }
      </div>
      <div class="hidden sm:flex sm:flex-1 sm:items-center sm:justify-between">
        <div>
          <p class="text-sm text-gray-700">
            Showing page <span class="font-medium">@pageNum</span> of <span class="font-medium">@totalPages</span>,
            <span class="font-medium">@total</span> records
          </p>
        </div>
        <div>
          <nav class="isolate inline-flex -space-x-px rounded-md shadow-sm" aria-label="Pagination">
            @if(pageNum > 1)
            {
              <a href="#" class="relative inline-flex items-center rounded-l-md px-2 py-2 text-gray-400 ring-1 ring-inset ring-gray-300 hover:bg-gray-50 focus:z-20 focus:outline-offset-0"
                 hx-get="@BuildListUrl(1)" hx-target="#list" hx-swap="innerHTML">
                <span class="sr-only">First</span>
                <i class="fas fa-angles-left h-5 w-5"></i>
              </a>
              <a href="#" class="relative inline-flex items-center px-2 py-2 text-gray-400 ring-1 ring-inset ring-gray-300 hover:bg-gray-50 focus:z-20 focus:outline-offset-0"
                 hx-get="@BuildListUrl(pageNum-1)" hx-target="#list" hx-swap="innerHTML">
                <span class="sr-only">Previous</span>
                <i class="fas fa-chevron-left h-5 w-5"></i>
              </a>
            }

            @for (int i = Math.Max(1, pageNum-2); i <= Math.Min(totalPages, pageNum+2); i++)
            {
              if(i == pageNum)
              {
                <a href="#" aria-current="page" class="relative z-10 inline-flex items-center bg-blue-600 px-4 py-2 text-sm font-semibold text-white focus:z-20 focus-visible:outline focus-visible:outline-2 focus-visible:outline-offset-2 focus-visible:outline-blue-600">
                  @i
                </a>
              }
              else
              {
                <a href="#" class="relative inline-flex items-center px-4 py-2 text-sm font-semibold text-gray-900 ring-1 ring-inset ring-gray-300 hover:bg-gray-50 focus:z-20 focus:outline-offset-0"
                   hx-get="@BuildListUrl(i)" hx-target="#list" hx-swap="innerHTML">
                  @i
                </a>
              }
            }

            @if(pageNum < totalPages)
            {
              <a href="#" class="relative inline-flex items-center px-2 py-2 text-gray-400 ring-1 ring-inset ring-gray-300 hover:bg-gray-50 focus:z-20 focus:outline-offset-0"
                 hx-get="@BuildListUrl(pageNum+1)" hx-target="#list" hx-swap="innerHTML">
                <span class="sr-only">Next</span>
                <i class="fas fa-chevron-right h-5 w-5"></i>
              </a>
              <a href="#" class="relative inline-flex items-center rounded-r-md px-2 py-2 text-gray-400 ring-1 ring-inset ring-gray-300 hover:bg-gray-50 focus:z-20 focus:outline-offset-0"
                 hx-get="@BuildListUrl(totalPages)" hx-target="#list" hx-swap="innerHTML">
                <span class="sr-only">Last</span>
                <i class="fas fa-angles-right h-5 w-5"></i>
              </a>
            }
          </nav>
        </div>
      </div>
    </nav>
  }
