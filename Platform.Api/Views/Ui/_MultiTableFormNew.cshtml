@using Platform.Infrastructure.Definitions
@{
    var pageDef = (PageDefinition)ViewData["PageDef"]!;
    var pageName = (string)ViewData["PageName"]!;
    
    var formSections = pageDef.FormSections;
    var dataLoading = pageDef.DataLoading;
}

<div class="space-y-6">
    @* 动态生成表单区域 *@
    @foreach (var section in formSections)
    {
        var sectionId = section.Id;
        var sectionTitle = section.Title ?? sectionId;
        var sectionType = section.Type ?? "form";
        var table = section.Table;
        
        <div class="card">
            <div class="card-header border-b border-gray-200 pb-4 mb-4">
                <h2 class="text-xl font-semibold text-gray-800">
                    <i class="fas fa-@(sectionType == "form" ? "edit" : "list") mr-2"></i>@sectionTitle
                </h2>
            </div>
            
            @if (sectionType == "form")
            {
                <form id="@sectionId-form" class="space-y-6">
                    <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
                        @if (!string.IsNullOrEmpty(table) && section.Fields != null && section.Fields.Any())
                        {
                            @foreach (var fieldName in section.Fields)
                            {
                                <div>
                                    <label class="block text-sm font-medium text-gray-700 mb-1">
                                        @fieldName
                                    </label>
                                    @* 简单处理：根据字段名猜测类型 *@
                                    @if (fieldName.ToLower().Contains("email"))
                                    {
                                        <input type="email" name="@fieldName"
                                               class="w-full px-3 py-2 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-transparent" />
                                    }
                                    else if (fieldName.ToLower().Contains("date"))
                                    {
                                        <input type="date" name="@fieldName"
                                               class="w-full px-3 py-2 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-transparent" />
                                    }
                                    else if (fieldName.ToLower().Contains("price") || fieldName.ToLower().Contains("total") || fieldName.ToLower().Contains("amount"))
                                    {
                                        <input type="number" step="0.01" name="@fieldName"
                                               class="w-full px-3 py-2 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-transparent" />
                                    }
                                    else if (fieldName.ToLower().Contains("id"))
                                    {
                                        <input type="number" name="@fieldName"
                                               class="w-full px-3 py-2 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-transparent" />
                                    }
                                    else
                                    {
                                        <input type="text" name="@fieldName"
                                               class="w-full px-3 py-2 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-transparent" />
                                    }
                                </div>
                            }
                        }
                        else if (!string.IsNullOrEmpty(table))
                        {
                            <div class="col-span-2">
                                <p class="text-gray-500 text-sm">表单字段配置来自表：@table</p>
                            </div>
                        }
                    </div>
                </form>
            }
            else if (sectionType == "editable_table" || sectionType == "table")
            {
                <div class="overflow-x-auto">
                    <table class="table w-full">
                        <thead>
                            <tr class="bg-gray-50">
                                @if (section.Columns != null && section.Columns.Any())
                                {
                                    foreach (var col in section.Columns)
                                    {
                                        <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">@col</th>
                                    }
                                }
                                else
                                {
                                    <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">ID</th>
                                    <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">数据</th>
                                }
                                @if (section.Editable)
                                {
                                    <th class="px-6 py-3 text-right text-xs font-medium text-gray-500 uppercase tracking-wider">操作</th>
                                }
                            </tr>
                        </thead>
                        <tbody id="@sectionId-body" class="bg-white divide-y divide-gray-200">
                            @* 数据加载前显示加载状态，由 JavaScript 填充实际数据 *@
                        </tbody>
                    </table>
                </div>
            }
        </div>
    }
    
    @* 保存按钮 *@
    <div class="flex gap-3">
        <button type="button" onclick="saveAllForms()" class="btn btn-primary">
            <i class="fas fa-save mr-2"></i>保存全部
        </button>
        <button type="button" onclick="loadAllData()" class="btn btn-outline">
            <i class="fas fa-sync mr-2"></i>刷新数据
        </button>
    </div>
</div>
