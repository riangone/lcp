@using Platform.Infrastructure.Definitions
@model IEnumerable<Dictionary<string, object>>
@{
    var def = (ModelDefinition)ViewData["ModelDef"]!;
    var modelName = (string)ViewData["ModelName"]!;
    var pageNum = (int)ViewData["Page"]!;
    var size = (int)ViewData["Size"]!;
    var total = (int)ViewData["Total"]!;
    var currentLang = Context.Request.Query["lang"].FirstOrDefault() ?? "en";
    var currentProject = Context.Request.Query["project"].FirstOrDefault() ?? "todo";

    var localizedLabels = currentLang == "zh" ? def.Ui?.Labels?.Zh : def.Ui?.Labels?.En;
    var title = localizedLabels != null && localizedLabels.ContainsKey("title") ? localizedLabels["title"] : modelName;

    var statusConfig = new Dictionary<string, (string color, string icon, string label)>
    {
        { "planning", ("bg-blue-500/20 text-blue-400 border-blue-500/30", "üìã", currentLang == "zh" ? "ËßÑÂàí‰∏≠" : "Planning") },
        { "active", ("bg-green-500/20 text-green-400 border-green-500/30", "üöÄ", currentLang == "zh" ? "ËøõË°å‰∏≠" : "Active") },
        { "on_hold", ("bg-yellow-500/20 text-yellow-400 border-yellow-500/30", "‚è∏Ô∏è", currentLang == "zh" ? "Â∑≤ÊöÇÂÅú" : "On Hold") },
        { "completed", ("bg-slate-500/20 text-slate-400 border-slate-500/30", "‚úÖ", currentLang == "zh" ? "Â∑≤ÂÆåÊàê" : "Completed") },
        { "cancelled", ("bg-red-500/20 text-red-400 border-red-500/30", "‚ùå", currentLang == "zh" ? "Â∑≤ÂèñÊ∂à" : "Cancelled") }
    };
}

<!DOCTYPE html>
<html lang="zh-CN">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@title - TODO</title>
    <script src="https://cdn.tailwindcss.com"></script>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" />
    <link rel="stylesheet" href="/css/todo.css" />
    <style>
        body {
            background: linear-gradient(135deg, #0f172a 0%, #1e293b 50%, #4c1d95 100%);
            min-height: 100vh;
        }
        .project-list-container {
            max-width: 1400px;
            margin: 0 auto;
            padding: 2rem;
        }
        .page-header {
            background: linear-gradient(135deg, #8b5cf6, #7c3aed);
            border-radius: 16px;
            padding: 2rem;
            margin-bottom: 2rem;
            box-shadow: 0 10px 40px rgba(124, 58, 237, 0.3);
        }
        .page-title {
            color: white;
            font-size: 2rem;
            font-weight: 700;
            display: flex;
            align-items: center;
            gap: 0.75rem;
        }
        .stats-bar {
            display: flex;
            gap: 1rem;
            margin-top: 1rem;
        }
        .stat-badge {
            background: rgba(255, 255, 255, 0.1);
            padding: 0.5rem 1rem;
            border-radius: 8px;
            font-size: 0.875rem;
            color: white;
        }
        .toolbar {
            background: rgba(30, 41, 59, 0.8);
            border-radius: 12px;
            padding: 1.25rem;
            margin-bottom: 1.5rem;
            display: flex;
            justify-content: space-between;
            align-items: center;
            border: 1px solid rgba(139, 92, 246, 0.2);
        }
        .btn-new-project {
            background: linear-gradient(135deg, #8b5cf6, #7c3aed);
            color: white;
            padding: 0.75rem 1.5rem;
            border-radius: 10px;
            text-decoration: none;
            font-weight: 600;
            display: inline-flex;
            align-items: center;
            gap: 0.5rem;
            transition: all 0.2s;
        }
        .btn-new-project:hover {
            background: linear-gradient(135deg, #7c3aed, #6d28d9);
            box-shadow: 0 4px 16px rgba(139, 92, 246, 0.4);
            transform: translateY(-1px);
        }
        .project-grid {
            display: grid;
            grid-template-columns: repeat(auto-fill, minmax(400px, 1fr));
            gap: 1.5rem;
        }
        .project-card {
            background: linear-gradient(145deg, rgba(30, 41, 59, 0.95), rgba(15, 23, 42, 0.98));
            border: 1px solid rgba(139, 92, 246, 0.2);
            border-radius: 12px;
            padding: 1.5rem;
            box-shadow: 0 4px 24px rgba(0, 0, 0, 0.3);
            transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
            cursor: pointer;
        }
        .project-card:hover {
            border-color: rgba(139, 92, 246, 0.4);
            box-shadow: 0 8px 32px rgba(139, 92, 246, 0.15);
            transform: translateY(-4px);
        }
        .project-header {
            display: flex;
            justify-content: space-between;
            align-items: flex-start;
            margin-bottom: 1rem;
        }
        .project-title {
            font-size: 1.25rem;
            font-weight: 600;
            color: #f1f5f9;
            flex: 1;
        }
        .project-description {
            color: #94a3b8;
            font-size: 0.875rem;
            margin-bottom: 1rem;
            line-height: 1.6;
        }
        .project-meta {
            display: flex;
            justify-content: space-between;
            align-items: center;
            padding-top: 1rem;
            border-top: 1px solid rgba(148, 163, 184, 0.1);
        }
        .project-dates {
            display: flex;
            gap: 1rem;
            font-size: 0.75rem;
            color: #94a3b8;
        }
        .project-date {
            display: inline-flex;
            align-items: center;
            gap: 0.375rem;
        }
        .project-actions {
            display: flex;
            gap: 0.5rem;
        }
        .project-action-btn {
            width: 32px;
            height: 32px;
            border-radius: 8px;
            border: none;
            background: rgba(148, 163, 184, 0.1);
            color: #94a3b8;
            cursor: pointer;
            font-size: 1rem;
            transition: all 0.2s;
        }
        .project-action-btn:hover {
            background: rgba(139, 92, 246, 0.2);
            color: #a78bfa;
        }
        .project-action-btn.delete:hover {
            background: rgba(239, 68, 68, 0.2);
            color: #f87171;
        }
        .empty-state {
            text-align: center;
            padding: 4rem;
            color: #94a3b8;
        }
        .empty-icon {
            font-size: 4rem;
            margin-bottom: 1rem;
            opacity: 0.5;
        }
        .nav-bar {
            background: rgba(15, 23, 42, 0.95);
            backdrop-filter: blur(12px);
            border-bottom: 1px solid rgba(139, 92, 246, 0.2);
            margin-bottom: 2rem;
        }
        .nav-link {
            color: #94a3b8;
            transition: all 0.2s ease;
            padding: 0.5rem 1rem;
            border-radius: 6px;
            text-decoration: none;
        }
        .nav-link:hover {
            color: #f1f5f9;
            background: rgba(139, 92, 246, 0.15);
        }
        .nav-link.active {
            color: #f1f5f9;
            background: rgba(139, 92, 246, 0.2);
        }
        .status-badge {
            padding: 0.25rem 0.75rem;
            border-radius: 9999px;
            font-size: 0.75rem;
            font-weight: 600;
            display: inline-flex;
            align-items: center;
            gap: 0.375rem;
        }
    </style>
</head>
<body>
    <!-- ÂØºËà™Ê†è -->
    <nav class="nav-bar sticky top-0 z-50">
        <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
            <div class="flex items-center justify-between h-16">
                <div class="flex items-center space-x-8">
                    <a href="/" class="flex items-center space-x-2 text-lg font-semibold">
                        <span>üìã</span>
                        <span>LowCode Platform</span>
                    </a>
                    <div class="hidden md:flex items-center space-x-2">
                        <a href="/?project=todo" class="nav-link">
                            <i class="fas fa-home mr-1"></i> È¶ñÈ°µ
                        </a>
                        <a href="/ui/Task?project=todo" class="nav-link">
                            <i class="fas fa-check-square mr-1"></i> ‰ªªÂä°
                        </a>
                        <a href="/ui/Project?project=todo" class="nav-link active">
                            <i class="fas fa-folder mr-1"></i> È°πÁõÆ
                        </a>
                        <a href="/ui/TaskWithProject?project=todo" class="nav-link">
                            <i class="fas fa-chart-pie mr-1"></i> È°πÁõÆ‰ªªÂä°
                        </a>
                    </div>
                </div>
                <div class="flex items-center space-x-4">
                    <select id="project-selector" class="todo-btn todo-btn-secondary text-sm">
                        <option value="todo">‚úÖ TODO</option>
                        <option value="crm">üíº CRM</option>
                        <option value="weather">üå§Ô∏è Â§©Ê∞î</option>
                        <option value="journal">üìî Êó•ËÆ∞</option>
                        <option value="ecommerce">üõí ÁîµÂïÜ</option>
                        <option value="chinook">üéµ Èü≥‰πê</option>
                    </select>
                </div>
            </div>
        </div>
    </nav>

    <div class="project-list-container">
        <!-- È°µÈù¢Ê†áÈ¢ò -->
        <div class="page-header">
            <h1 class="page-title">
                <span class="text-4xl">üìÅ</span>
                @title
            </h1>
            <div class="stats-bar">
                <div class="stat-badge">
                    <span class="font-bold">@total</span> @(currentLang == "zh" ? "ÊÄªÈ°πÁõÆ" : "Total Projects")
                </div>
                @{
                    var activeCount = Model.Count(p => p.ContainsKey("Status") && p["Status"]?.ToString() == "active");
                    var completedCount = Model.Count(p => p.ContainsKey("Status") && p["Status"]?.ToString() == "completed");
                }
                <div class="stat-badge">
                    <span class="font-bold">@activeCount</span> @(currentLang == "zh" ? "ËøõË°å‰∏≠" : "Active")
                </div>
                <div class="stat-badge">
                    <span class="font-bold">@completedCount</span> @(currentLang == "zh" ? "Â∑≤ÂÆåÊàê" : "Completed")
                </div>
            </div>
        </div>

        <!-- Â∑•ÂÖ∑Ê†è -->
        <div class="toolbar">
            <a href="/ui/Project/create?project=@currentProject" class="btn-new-project">
                <i class="fas fa-plus"></i>
                @(currentLang == "zh" ? "Êñ∞Âª∫È°πÁõÆ" : "New Project")
            </a>
        </div>

        <!-- È°πÁõÆÁΩëÊ†º -->
        <div id="project-grid" class="project-grid">
            @foreach (var project in Model)
            {
                var id = project[def.PrimaryKey]?.ToString() ?? "";
                var name = project.ContainsKey("Name") ? project["Name"]?.ToString() ?? "" : "";
                var description = project.ContainsKey("Description") ? project["Description"]?.ToString() ?? "" : "";
                var status = project.ContainsKey("Status") ? project["Status"]?.ToString() ?? "planning" : "planning";
                var startDate = project.ContainsKey("StartDate") ? project["StartDate"]?.ToString() ?? "" : "";
                var endDate = project.ContainsKey("EndDate") ? project["EndDate"]?.ToString() ?? "" : "";

                var statusInfo = statusConfig.ContainsKey(status) ? statusConfig[status] : statusConfig["planning"];

                <div class="project-card" data-id="@id" onclick="editProject('@id')">
                    <div class="project-header">
                        <h3 class="project-title">@name</h3>
                        <span class="status-badge @statusInfo.color">@statusInfo.icon @statusInfo.label</span>
                    </div>
                    @if (!string.IsNullOrEmpty(description))
                    {
                        <p class="project-description">@description</p>
                    }
                    <div class="project-meta">
                        @if (!string.IsNullOrEmpty(startDate) || !string.IsNullOrEmpty(endDate))
                        {
                            <div class="project-dates">
                                @if (!string.IsNullOrEmpty(startDate))
                                {
                                    <span class="project-date">
                                        <i class="fas fa-calendar"></i>
                                        <span>@startDate</span>
                                    </span>
                                }
                                @if (!string.IsNullOrEmpty(endDate))
                                {
                                    <span class="project-date">
                                        <i class="fas fa-flag"></i>
                                        <span>@endDate</span>
                                    </span>
                                }
                            </div>
                        }
                        <div class="project-actions">
                            <button class="project-action-btn" onclick="event.stopPropagation(); editProject('@id')" title="@(currentLang == "zh" ? "ÁºñËæë" : "Edit")">
                                <i class="fas fa-edit"></i>
                            </button>
                            <button class="project-action-btn delete" onclick="event.stopPropagation(); openDeleteDialog('@modelName', '@id')" title="@(currentLang == "zh" ? "Âà†Èô§" : "Delete")">
                                <i class="fas fa-trash"></i>
                            </button>
                        </div>
                    </div>
                </div>
            }
            @if (!Model.Any())
            {
                <div class="empty-state" style="grid-column: 1 / -1;">
                    <div class="empty-icon">üìÅ</div>
                    <h3>@(currentLang == "zh" ? "ÊöÇÊó†È°πÁõÆ" : "No projects yet")</h3>
                    <p>@(currentLang == "zh" ? "ÁÇπÂáª\"Êñ∞Âª∫È°πÁõÆ\"ÂºÄÂßãÂàõÂª∫Á¨¨‰∏Ä‰∏™È°πÁõÆ" : "Click \"New Project\" to create your first project")</p>
                </div>
            }
        </div>
    </div>

    <script>
        const API_BASE = '/api';
        const currentProject = '@currentProject';
        const currentLang = '@currentLang';

        // ÁºñËæëÈ°πÁõÆ
        function editProject(id) {
            window.location.href = `/ui/Project/edit/${id}?project=${currentProject}`;
        }

        // ÊâìÂºÄÂà†Èô§ÂØπËØùÊ°Ü
        function openDeleteDialog(model, id) {
            if (confirm(currentLang === 'zh' ? 'Á°ÆÂÆöË¶ÅÂà†Èô§Ê≠§È°πÁõÆÂêóÔºü' : 'Are you sure you want to delete this project?')) {
                fetch(`${API_BASE}/${model}/${id}?project=${currentProject}`, {
                    method: 'DELETE',
                    headers: {
                        'Content-Type': 'application/json'
                    }
                })
                .then(response => {
                    if (response.ok) {
                        window.location.reload();
                    } else {
                        alert(currentLang === 'zh' ? 'Âà†Èô§Â§±Ë¥•' : 'Delete failed');
                    }
                })
                .catch(error => {
                    console.error('Error:', error);
                    alert(currentLang === 'zh' ? 'Âà†Èô§Â§±Ë¥•' : 'Delete failed');
                });
            }
        }

        // È°πÁõÆÂàáÊç¢
        document.getElementById('project-selector')?.addEventListener('change', function() {
            window.location.href = `/?project=${this.value}`;
        });
    </script>
</body>
</html>
