<body>
    <div class="form-container">
        <div class="form-header">
            <h2 class="form-title">
                <span class="text-2xl">âœï¸</span>
                @(isEdit ? (currentLang == "zh" ? "ç¼–è¾‘æ—¥è®°" : "Edit Entry") : (currentLang == "zh" ? "å†™æ—¥è®°" : "Write Entry"))
            </h2>
            <button class="btn-close" onclick="closeForm()" title="@(currentLang == "zh" ? "å…³é—­" : "Close")">
                <i class="fas fa-times"></i>
            </button>
        </div>

        <form method="post" action="@action" class="form-body">
            @Html.AntiForgeryToken()
            <input type="hidden" name="project" value="@currentProject" />
            <input type="hidden" name="returnUrl" value="@returnUrl" />
            <input type="hidden" name="@method" value="true" />

            <!-- å¿ƒæƒ…é€‰æ‹©å™¨ -->
            <div class="form-section">
                <label class="section-label">
                    <i class="fas fa-face-smile"></i>
                    @(currentLang == "zh" ? "ä»Šå¤©æ„Ÿè§‰æ€ä¹ˆæ ·ï¼Ÿ" : "How are you feeling?")
                </label>
                <div class="mood-selector">
                    @foreach (var mood in moodOptions)
                    {
                        <label class="mood-option @(moodValue == mood.Key ? "selected" : "")">
                            <input type="radio" name="Mood" value="@mood.Key" @(moodValue == mood.Key ? "checked" : "") />
                            <span class="mood-emoji">@mood.Value.emoji</span>
                            <span class="mood-label">@mood.Value.label</span>
                        </label>
                    }
                </div>
            </div>

            <!-- æ ‡é¢˜ -->
            <div class="form-section">
                <label class="section-label" for="Title">
                    <i class="fas fa-heading"></i>
                    @(currentLang == "zh" ? "æ ‡é¢˜" : "Title") <span class="required">*</span>
                </label>
                <input type="text"
                       id="Title"
                       name="Title"
                       value="@titleValue"
                       placeholder="@(currentLang == "zh" ? "ç»™æ—¥è®°ä¸€ä¸ªæ ‡é¢˜..." : "Give your entry a title...")"
                       class="form-input title-input"
                       required
                       maxlength="200" />
            </div>

            <!-- æ—¥æœŸ -->
            <div class="form-section">
                <label class="section-label" for="Date">
                    <i class="far fa-calendar"></i>
                    @(currentLang == "zh" ? "æ—¥æœŸ" : "Date")
                </label>
                <input type="date"
                       id="Date"
                       name="Date"
                       value="@dateValue"
                       class="form-input date-input" />
            </div>

            <!-- åˆ†ç±» -->
            <div class="form-section">
                <label class="section-label" for="CategoryId">
                    <i class="fas fa-folder"></i>
                    @(currentLang == "zh" ? "åˆ†ç±»" : "Category")
                </label>
                <select id="CategoryId"
                        name="CategoryId"
                        class="form-input category-select">
                    <option value="">@(currentLang == "zh" ? "é€‰æ‹©åˆ†ç±»" : "Select category")</option>
                    @foreach (var cat in categoryOptions)
                    {
                        <option value="@cat.value" selected="@(categoryIdValue == cat.value ? "selected" : "")">
                            @cat.emoji @cat.label
                        </option>
                    }
                </select>
            </div>

            <!-- å†…å®¹ -->
            <div class="form-section">
                <label class="section-label" for="Content">
                    <i class="fas fa-align-left"></i>
                    @(currentLang == "zh" ? "å†…å®¹" : "Content") <span class="required">*</span>
                </label>
                <div class="editor-toolbar">
                    <button type="button" class="toolbar-btn" onclick="insertEmoji('â¤ï¸')" title="æ’å…¥è¡¨æƒ…">
                        â¤ï¸
                    </button>
                    <button type="button" class="toolbar-btn" onclick="insertEmoji('âœ¨')" title="æ’å…¥è¡¨æƒ…">
                        âœ¨
                    </button>
                    <button type="button" class="toolbar-btn" onclick="insertEmoji('ğŸ“')" title="æ’å…¥è¡¨æƒ…">
                        ğŸ“
                    </button>
                    <button type="button" class="toolbar-btn" onclick="insertEmoji('ğŸ˜Š')" title="æ’å…¥è¡¨æƒ…">
                        ğŸ˜Š
                    </button>
                    <button type="button" class="toolbar-btn" onclick="insertEmoji('ğŸ‰')" title="æ’å…¥è¡¨æƒ…">
                        ğŸ‰
                    </button>
                </div>
                <textarea id="Content"
                          name="Content"
                          rows="12"
                          class="form-textarea"
                          placeholder="@(currentLang == "zh" ? "ä»Šå¤©å‘ç”Ÿäº†ä»€ä¹ˆï¼Ÿ" : "What happened today?")"
                          required
                          maxlength="10000">@contentValue</textarea>
                <div class="char-counter">
                    <span id="char-count">@(contentValue?.Length ?? 0)</span> / 10000
                </div>
            </div>

            <!-- æäº¤æŒ‰é’® -->
            <div class="form-actions">
                <button type="button" class="btn btn-cancel" onclick="closeForm()">
                    <i class="fas fa-times"></i>
                    @(currentLang == "zh" ? "å–æ¶ˆ" : "Cancel")
                </button>
                <button type="submit" class="btn btn-submit">
                    <i class="fas fa-save"></i>
                    @(isEdit ? (currentLang == "zh" ? "ä¿å­˜ä¿®æ”¹" : "Save Changes") : (currentLang == "zh" ? "åˆ›å»ºæ—¥è®°" : "Create Entry"))
                </button>
            </div>
        </form>
    </div>

    <script>
        // å…³é—­è¡¨å•
        function closeForm() {
            window.location.href = '@returnUrl';
        }

        // ESC é”®å…³é—­
        document.addEventListener('keydown', function(e) {
            if (e.key === 'Escape') closeForm();
        });

        // å¿ƒæƒ…é€‰æ‹©å™¨æ ·å¼æ›´æ–°
        document.querySelectorAll('.mood-option input[type="radio"]').forEach(input => {
            input.addEventListener('change', function() {
                document.querySelectorAll('.mood-option').forEach(opt => opt.classList.remove('selected'));
                this.closest('.mood-option').classList.add('selected');
            });
        });

        // æ’å…¥è¡¨æƒ…
        function insertEmoji(emoji) {
            const textarea = document.getElementById('Content');
            const start = textarea.selectionStart;
            const text = textarea.value;
            textarea.value = text.substring(0, start) + emoji + text.substring(start);
            textarea.focus();
            updateCharCount();
        }

        // æ›´æ–°å­—ç¬¦è®¡æ•°
        function updateCharCount() {
            const textarea = document.getElementById('Content');
            const count = document.getElementById('char-count');
            if (count) {
                count.textContent = textarea.value.length;
            }
        }

        // åˆå§‹åŒ–
        updateCharCount();
    </script>
</body>
