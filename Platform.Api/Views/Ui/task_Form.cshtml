@using Platform.Infrastructure.Definitions
@{
    var def = (ModelDefinition)ViewData["ModelDef"]!;
    var modelName = (string)ViewData["ModelName"]!;
    var row = ViewData["Row"] as Dictionary<string, object>;
    var isEdit = row != null;
    var currentLang = Context.Request.Query["lang"].FirstOrDefault() ?? "en";
    var currentProject = Context.Request.Query["project"].FirstOrDefault() ?? "todo";
    var returnUrl = ViewData["ReturnUrl"] as string ?? $"/ui/Task?project={currentProject}";

    var localizedLabels = currentLang == "zh" ? def.Ui?.Labels?.Zh : def.Ui?.Labels?.En;
    var title = localizedLabels != null && localizedLabels.ContainsKey("title") ? localizedLabels["title"] : modelName;

    var titleValue = isEdit && row != null && row.ContainsKey("Title") ? row["Title"]?.ToString() ?? "" : "";
    var descValue = isEdit && row != null && row.ContainsKey("Description") ? row["Description"]?.ToString() ?? "" : "";
    var statusValue = isEdit && row != null && row.ContainsKey("Status") ? row["Status"]?.ToString() ?? "pending" : "pending";
    var priorityValue = isEdit && row != null && row.ContainsKey("Priority") ? row["Priority"]?.ToString() ?? "medium" : "medium";
    var dueDateValue = isEdit && row != null && row.ContainsKey("DueDate") ? row["DueDate"]?.ToString() ?? "" : "";
    var projectIdValue = isEdit && row != null && row.ContainsKey("ProjectId") ? row["ProjectId"]?.ToString() ?? "" : "";

    var action = isEdit ? $"/api/{modelName}/{row![def.PrimaryKey]}" : $"/api/{modelName}";
    var method = isEdit ? "put" : "post";
}

<!DOCTYPE html>
<html lang="zh-CN">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@(isEdit ? (currentLang == "zh" ? "ÁºñËæë‰ªªÂä°" : "Edit Task") : (currentLang == "zh" ? "Êñ∞Âª∫‰ªªÂä°" : "New Task"))</title>
    <script src="https://cdn.tailwindcss.com"></script>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" />
    <link rel="stylesheet" href="/css/todo.css" />
    <style>
        body {
            background: linear-gradient(135deg, #0f172a 0%, #1e293b 50%, #064e3b 100%);
            min-height: 100vh;
            display: flex;
            align-items: center;
            justify-content: center;
            padding: 2rem;
        }
        .form-container {
            background: linear-gradient(145deg, rgba(30, 41, 59, 0.98), rgba(15, 23, 42, 0.98));
            border: 1px solid rgba(16, 185, 129, 0.2);
            border-radius: 16px;
            width: 100%;
            max-width: 650px;
            box-shadow: 0 20px 60px rgba(0, 0, 0, 0.4);
        }
        .form-header {
            background: linear-gradient(135deg, #10b981, #059669);
            border-radius: 16px 16px 0 0;
            padding: 1.5rem 2rem;
            display: flex;
            justify-content: space-between;
            align-items: center;
        }
        .form-title {
            color: white;
            font-size: 1.5rem;
            font-weight: 600;
            display: flex;
            align-items: center;
            gap: 0.75rem;
        }
        .btn-close {
            width: 36px;
            height: 36px;
            border-radius: 50%;
            border: none;
            background: rgba(255, 255, 255, 0.2);
            color: white;
            cursor: pointer;
            font-size: 1.25rem;
            transition: all 0.2s;
        }
        .btn-close:hover {
            background: rgba(239, 68, 68, 0.3);
        }
        .form-body {
            padding: 2rem;
        }
        .form-group {
            margin-bottom: 1.5rem;
        }
        .form-label {
            display: block;
            font-weight: 600;
            color: #e2e8f0;
            margin-bottom: 0.5rem;
            font-size: 0.95rem;
        }
        .required {
            color: #f87171;
            margin-left: 0.25rem;
        }
        .form-input, .form-select, .form-textarea {
            width: 100%;
            padding: 0.875rem 1rem;
            border: 2px solid rgba(148, 163, 184, 0.2);
            border-radius: 10px;
            font-size: 1rem;
            transition: all 0.2s;
            font-family: inherit;
            background: rgba(15, 23, 42, 0.6);
            color: #f1f5f9;
        }
        .form-input:focus, .form-select:focus, .form-textarea:focus {
            outline: none;
            border-color: #10b981;
            box-shadow: 0 0 0 3px rgba(16, 185, 129, 0.1);
        }
        .form-input::placeholder {
            color: #64748b;
        }
        .form-textarea {
            resize: vertical;
            min-height: 120px;
        }
        .form-row {
            display: grid;
            grid-template-columns: 1fr 1fr;
            gap: 1rem;
        }
        .form-actions {
            display: flex;
            justify-content: flex-end;
            gap: 1rem;
            padding-top: 1.5rem;
            border-top: 1px solid rgba(148, 163, 184, 0.1);
        }
        .btn {
            padding: 0.875rem 1.75rem;
            border-radius: 10px;
            font-weight: 600;
            cursor: pointer;
            border: none;
            transition: all 0.2s;
            font-size: 1rem;
            display: inline-flex;
            align-items: center;
            gap: 0.5rem;
        }
        .btn-cancel {
            background: rgba(107, 114, 128, 0.2);
            color: #94a3b8;
        }
        .btn-cancel:hover {
            background: rgba(107, 114, 128, 0.3);
            color: #e2e8f0;
        }
        .btn-submit {
            background: linear-gradient(135deg, #10b981, #059669);
            color: white;
        }
        .btn-submit:hover {
            background: linear-gradient(135deg, #059669, #047857);
            box-shadow: 0 4px 16px rgba(16, 185, 129, 0.4);
            transform: translateY(-1px);
        }
        .select-wrapper {
            position: relative;
        }
        .select-wrapper::after {
            content: '‚ñº';
            position: absolute;
            right: 1rem;
            top: 50%;
            transform: translateY(-50%);
            color: #64748b;
            pointer-events: none;
            font-size: 0.75rem;
        }
        .form-select {
            appearance: none;
            padding-right: 2.5rem;
        }
        @@media (max-width: 640px) {
            body {
                padding: 1rem;
                align-items: flex-start;
            }
            .form-row {
                grid-template-columns: 1fr;
            }
            .form-actions {
                flex-direction: column;
            }
            .btn {
                width: 100%;
                justify-content: center;
            }
        }
    </style>
</head>
<body>
    <div class="form-container">
        <div class="form-header">
            <h2 class="form-title">
                <span class="text-2xl">üìã</span>
                @(isEdit ? (currentLang == "zh" ? "ÁºñËæë‰ªªÂä°" : "Edit Task") : (currentLang == "zh" ? "Êñ∞Âª∫‰ªªÂä°" : "New Task"))
            </h2>
            <button class="btn-close" onclick="closeForm()" title="@(currentLang == "zh" ? "ÂÖ≥Èó≠" : "Close")">
                <i class="fas fa-times"></i>
            </button>
        </div>

        <form method="post" action="@action" class="form-body">
            @Html.AntiForgeryToken()
            <input type="hidden" name="project" value="@currentProject" />
            <input type="hidden" name="returnUrl" value="@returnUrl" />
            <input type="hidden" name="@method" value="true" />

            <div class="form-group">
                <label class="form-label" for="Title">
                    @(currentLang == "zh" ? "‰ªªÂä°Ê†áÈ¢ò" : "Task Title") <span class="required">*</span>
                </label>
                <input type="text" id="Title" name="Title" value="@titleValue"
                       class="form-input" required maxlength="200"
                       placeholder="@(currentLang == "zh" ? "ËæìÂÖ•‰ªªÂä°Ê†áÈ¢ò..." : "Enter task title...")" />
            </div>

            <div class="form-group">
                <label class="form-label" for="Description">
                    @(currentLang == "zh" ? "‰ªªÂä°ÊèèËø∞" : "Description")
                </label>
                <textarea id="Description" name="Description" rows="4"
                          class="form-textarea" maxlength="2000"
                          placeholder="@(currentLang == "zh" ? "ÊèèËø∞‰ªªÂä°ËØ¶ÊÉÖÔºàÂèØÈÄâÔºâ..." : "Describe the task (optional)...")">@descValue</textarea>
            </div>

            <div class="form-row">
                <div class="form-group">
                    <label class="form-label" for="Status">
                        @(currentLang == "zh" ? "Áä∂ÊÄÅ" : "Status") <span class="required">*</span>
                    </label>
                    <div class="select-wrapper">
                        <select id="Status" name="Status" class="form-select">
                            <option value="pending" selected="@(statusValue == "pending")">‚è≥ @(currentLang == "zh" ? "ÂæÖÂ§ÑÁêÜ" : "Pending")</option>
                            <option value="in_progress" selected="@(statusValue == "in_progress")">üîÑ @(currentLang == "zh" ? "ËøõË°å‰∏≠" : "In Progress")</option>
                            <option value="completed" selected="@(statusValue == "completed")">‚úÖ @(currentLang == "zh" ? "Â∑≤ÂÆåÊàê" : "Completed")</option>
                            <option value="cancelled" selected="@(statusValue == "cancelled")">‚ùå @(currentLang == "zh" ? "Â∑≤ÂèñÊ∂à" : "Cancelled")</option>
                        </select>
                    </div>
                </div>

                <div class="form-group">
                    <label class="form-label" for="Priority">
                        @(currentLang == "zh" ? "‰ºòÂÖàÁ∫ß" : "Priority") <span class="required">*</span>
                    </label>
                    <div class="select-wrapper">
                        <select id="Priority" name="Priority" class="form-select">
                            <option value="low" selected="@(priorityValue == "low")">üîµ @(currentLang == "zh" ? "‰Ωé" : "Low")</option>
                            <option value="medium" selected="@(priorityValue == "medium")">üü° @(currentLang == "zh" ? "‰∏≠" : "Medium")</option>
                            <option value="high" selected="@(priorityValue == "high")">üî¥ @(currentLang == "zh" ? "È´ò" : "High")</option>
                            <option value="urgent" selected="@(priorityValue == "urgent")">üî• @(currentLang == "zh" ? "Á¥ßÊÄ•" : "Urgent")</option>
                        </select>
                    </div>
                </div>
            </div>

            <div class="form-row">
                <div class="form-group">
                    <label class="form-label" for="DueDate">
                        @(currentLang == "zh" ? "Êà™Ê≠¢Êó•Êúü" : "Due Date")
                    </label>
                    <input type="date" id="DueDate" name="DueDate" value="@dueDateValue" class="form-input" />
                </div>

                <div class="form-group">
                    <label class="form-label" for="ProjectId">
                        @(currentLang == "zh" ? "ÊâÄÂ±ûÈ°πÁõÆ" : "Project")
                    </label>
                    <div class="select-wrapper">
                        <select id="ProjectId" name="ProjectId" class="form-select">
                            <option value="">@(currentLang == "zh" ? "Êó†" : "None")</option>
                            <!-- È°πÁõÆÈÄâÈ°πÂ∞ÜÈÄöËøá JS Âä®ÊÄÅÂä†ËΩΩ -->
                        </select>
                    </div>
                </div>
            </div>

            <div class="form-actions">
                <button type="button" class="btn btn-cancel" onclick="closeForm()">
                    <i class="fas fa-times"></i>
                    @(currentLang == "zh" ? "ÂèñÊ∂à" : "Cancel")
                </button>
                <button type="submit" class="btn btn-submit">
                    <i class="fas fa-save"></i>
                    @(isEdit ? (currentLang == "zh" ? "‰øùÂ≠ò‰øÆÊîπ" : "Save Changes") : (currentLang == "zh" ? "ÂàõÂª∫‰ªªÂä°" : "Create Task"))
                </button>
            </div>
        </form>
    </div>

    <script>
        const currentProject = '@currentProject';
        const isEdit = @(isEdit ? "true" : "false");
        const currentProjectId = '@projectIdValue';

        // ÂÖ≥Èó≠Ë°®Âçï
        function closeForm() {
            window.location.href = '@returnUrl';
        }

        // ESC ÈîÆÂÖ≥Èó≠
        document.addEventListener('keydown', function(e) {
            if (e.key === 'Escape') closeForm();
        });

        // Âä†ËΩΩÈ°πÁõÆÂàóË°®
        async function loadProjects() {
            try {
                const response = await fetch(`/api/Project?project=${currentProject}`);
                const projects = await response.json();

                const select = document.getElementById('ProjectId');
                projects.forEach(p => {
                    const option = document.createElement('option');
                    option.value = p.Id;
                    option.textContent = p.Name || `Project ${p.Id}`;
                    if (p.Id.toString() === currentProjectId) {
                        option.selected = true;
                    }
                    select.appendChild(option);
                });
            } catch (error) {
                console.error('Error loading projects:', error);
            }
        }

        // È°µÈù¢Âä†ËΩΩÊó∂Âä†ËΩΩÈ°πÁõÆÂàóË°®
        if (!isEdit) {
            loadProjects();
        } else if (currentProjectId) {
            loadProjects();
        }

        // Ë°®ÂçïÊèê‰∫§Â§ÑÁêÜ
        document.querySelector('form').addEventListener('submit', function(e) {
            const submitBtn = this.querySelector('.btn-submit');
            submitBtn.disabled = true;
            submitBtn.innerHTML = '<i class="fas fa-spinner fa-spin"></i> @(currentLang == "zh" ? "‰øùÂ≠ò‰∏≠..." : "Saving...")';
        });
    </script>
</body>
</html>
