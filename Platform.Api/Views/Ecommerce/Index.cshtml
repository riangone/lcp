        // åŠ è½½è®¢å•çŠ¶æ€åˆ†å¸ƒ
        async function loadOrderStatusDistribution() {
            try {
                const response = await fetch(`${API_BASE}/Order?project=${currentProject}`);
                const orders = await response.json();

                const statusCounts = {};
                orders.forEach(o => {
                    const status = o.Status || 'Pending';
                    statusCounts[status] = (statusCounts[status] || 0) + 1;
                });

                const total = orders.length || 1;
                const container = document.getElementById('order-status-distribution');

                container.innerHTML = Object.entries(orderStatusConfig).map(([key, config]) => {
                    const count = statusCounts[key] || 0;
                    const percent = Math.round((count / total) * 100);
                    return `
                        <div>
                            <div class="flex justify-between mb-2">
                                <span class="text-slate-300">${config.label}</span>
                                <span class="text-slate-400">${count} (${percent}%)</span>
