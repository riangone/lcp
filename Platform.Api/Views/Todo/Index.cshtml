        function formatDate(dateStr) {
            if (!dateStr) return '';
            const date = new Date(dateStr);
            const now = new Date();
            const diffTime = date - now;
            const diffDays = Math.ceil(diffTime / (1000 * 60 * 60 * 24));

            if (diffDays < 0) return `<span class="text-red-400">å·²è¿‡æœŸ ${Math.abs(diffDays)} å¤©</span>`;
            if (diffDays === 0) return '<span class="text-yellow-400">ä»Šå¤©åˆ°æœŸ</span>';
            if (diffDays === 1) return '<span class="text-yellow-400">æ˜å¤©åˆ°æœŸ</span>';
            if (diffDays <= 7) return `<span class="text-orange-400">${diffDays} å¤©ååˆ°æœŸ</span>`;
            return date.toLocaleDateString('zh-CN');
