@{
    var currentLang = Context.Request.Query["lang"].FirstOrDefault() ?? "en";
}

<!DOCTYPE html>
<html lang="@currentLang">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Low Code Platform</title>
    <link rel="stylesheet" href="~/css/site.css" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" />
    <script src="https://cdn.tailwindcss.com"></script>
    <script src="https://unpkg.com/htmx.org@1.9.10"></script>
</head>
<body>
    <nav class="navbar">
        <a href="/" class="navbar-brand">
            <i class="fas fa-cube"></i>
            Low Code Platform
        </a>
        
        <ul class="navbar-nav">
            <li class="nav-item">
                <a href="/" class="nav-link @(ViewData["ActivePage"]?.ToString() == "Home" ? "active" : "")">
                    <i class="fas fa-home"></i>
                    Home
                </a>
            </li>
            
            <li class="nav-item dropdown">
                <a href="#" class="nav-link">
                    <i class="fas fa-database"></i>
                    Data Management
                    <i class="fas fa-chevron-down ml-1 text-xs"></i>
                </a>
                <div class="dropdown-menu">
                    @if (ViewData["Models"] is Dictionary<string, Platform.Infrastructure.Definitions.ModelDefinition> models)
                    {
                        @foreach (var model in models)
                        {
                            <a href="/ui/@(model.Key)?lang=@currentLang" class="dropdown-item">
                                <i class="fas fa-table mr-2"></i>
                                @(model.Key)
                            </a>
                        }
                    }
                </div>
            </li>
            
            <li class="nav-item dropdown">
                <a href="#" class="nav-link">
                    <i class="fas fa-robot"></i>
                    AI Features
                    <i class="fas fa-chevron-down ml-1 text-xs"></i>
                </a>
                <div class="dropdown-menu">
                    <a href="/InventoryAiPage" class="dropdown-item">
                        <i class="fas fa-chart-line mr-2"></i>
                        Inventory AI
                    </a>
                    <a href="/ai-validation" class="dropdown-item">
                        <i class="fas fa-shield-alt mr-2"></i>
                        AI Validation
                    </a>
                    <a href="/ai-validation/snapshots" class="dropdown-item">
                        <i class="fas fa-cogs mr-2"></i>
                        Snapshots
                    </a>
                    <a href="/ai-validation/test-scenarios" class="dropdown-item">
                        <i class="fas fa-flask mr-2"></i>
                        Test Scenarios
                    </a>
                </div>
            </li>
            
            <li class="nav-item">
                <a href="/docs" class="nav-link @(ViewData["ActivePage"]?.ToString() == "Docs" ? "active" : "")">
                    <i class="fas fa-book"></i>
                    Docs
                </a>
            </li>
            
            <li class="nav-item">
                <div class="language-switcher">
                    <select onchange="changeLanguage(this.value)" class="bg-transparent border-none focus:ring-0">
                        <option value="en" @(currentLang == "en" ? "selected" : "")>ðŸ‡ºðŸ‡¸ EN</option>
                        <option value="zh" @(currentLang == "zh" ? "selected" : "")>ðŸ‡¨ðŸ‡³ ä¸­æ–‡</option>
                    </select>
                </div>
            </li>
        </ul>
    </nav>

    <main class="main-content">
        @RenderBody()
    </main>

    <footer class="bg-gray-800 text-white py-8">
        <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
            <div class="text-center">
                <p class="text-lg font-medium">Low Code Platform</p>
                <p class="mt-2 text-gray-400">Powered by Modern Web Technologies</p>
                <p class="mt-4 text-sm text-gray-500">&copy; 2026 Low Code Platform. All rights reserved.</p>
            </div>
        </div>
    </footer>

    <script>
        function changeLanguage(lang) {
            const url = new URL(window.location);
            url.searchParams.set('lang', lang);
            window.location = url.toString();
        }
    </script>
</body>
</html>