@using Platform.Infrastructure.Definitions
@{
    var models = ViewData["Models"] as Dictionary<string, ModelDefinition>;
    // Ëé∑ÂèñÂΩìÂâçËØ≠Ë®ÄÔºåÈªòËÆ§‰∏∫Ëã±Êñá
    var currentLang = Context.Request.Query["lang"].FirstOrDefault() ?? "en";
}

<style>
    body {
        background: linear-gradient(135deg, #f5f7fa 0%, #e4edf5 100%) !important;
        min-height: 100vh;
    }
    .glass-card {
        backdrop-filter: blur(10px);
        background: rgba(255, 255, 255, 0.85);
        border: 1px solid rgba(255, 255, 255, 0.18);
        box-shadow: 0 8px 32px 0 rgba(31, 38, 135, 0.15);
    }
    .hover-lift {
        transition: all 0.3s ease;
    }
    .hover-lift:hover {
        transform: translateY(-5px);
        box-shadow: 0 20px 40px rgba(0,0,0,0.1);
    }
    .gradient-text {
        background: linear-gradient(90deg, #667eea 0%, #764ba2 100%);
        -webkit-background-clip: text;
        -webkit-text-fill-color: transparent;
        background-clip: text;
    }
    .icon-bg {
        background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
        width: 60px;
        height: 60px;
        border-radius: 50%;
        display: flex;
        align-items: center;
        justify-content: center;
        margin: 0 auto 1rem;
    }
</style>

<div class="min-h-screen flex flex-col home-page">
    <!-- Header -->
    <header class="py-8 px-4 sm:px-6 lg:px-8">
        <div class="max-w-7xl mx-auto text-center">
            <h1 class="text-4xl md:text-5xl font-bold gradient-text mb-4">
                Low Code Platform
            </h1>
            <p class="text-lg text-gray-600 max-w-2xl mx-auto mb-6">
                Select a model to manage your data
            </p>
            
            <!-- ËØ≠Ë®ÄÂàáÊç¢ -->
            <div class="inline-flex items-center bg-white rounded-full p-1 shadow-md">
                <select onchange="changeLanguage(this.value)" class="bg-transparent border-none focus:ring-0 text-sm">
                    <option value="en" @(currentLang == "en" ? "selected" : "")>üá∫üá∏ English</option>
                    <option value="zh" @(currentLang == "zh" ? "selected" : "")>üá®üá≥ ‰∏≠Êñá</option>
                </select>
            </div>
        </div>
    </header>

    <!-- Main Content -->
    <main class="flex-grow py-8 px-4 sm:px-6 lg:px-8">
        <div class="max-w-7xl mx-auto">
            @if (models != null && models.Any())
            {
                <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 xl:grid-cols-4 gap-6">
                    @foreach (var model in models)
                    {
                        var modelKey = model.Key; // ÈÅøÂÖçRazorËß£ÊûêÈîôËØØ
                        
                        // Ëé∑ÂèñUIÈÖçÁΩÆ
                        var uiLabels = model.Value.Ui?.Labels;
                        Dictionary<string, string>? localizedLabels = null;
                        
                        if (uiLabels != null)
                        {
                            if (currentLang == "zh" && uiLabels.Zh != null)
                            {
                                localizedLabels = uiLabels.Zh;
                            }
                            else if (currentLang == "en" && uiLabels.En != null)
                            {
                                localizedLabels = uiLabels.En;
                            }
                        }
                        
                        if (localizedLabels == null)
                        {
                            localizedLabels = new Dictionary<string, string>();
                        }
                        
                        var title = localizedLabels.ContainsKey("title") ? localizedLabels["title"] : modelKey;
                        var description = localizedLabels.ContainsKey("description") ? localizedLabels["description"] : $"Manage {modelKey} records";
                        
                        var cardClass = model.Value.Ui?.Styles?.CardClass ?? "glass-card";
                        var table = model.Value.Table;
                        
                        // Ê†πÊçÆÊ®°ÂûãÂêçÁß∞ÈÄâÊã©ÂõæÊ†á
                        string iconClass = "fas fa-database";
                        if (modelKey.ToLower().Contains("customer") || modelKey.ToLower().Contains("user"))
                        {
                            iconClass = "fas fa-user-friends";
                        }
                        else if (modelKey.ToLower().Contains("product"))
                        {
                            iconClass = "fas fa-box-open";
                        }
                        else if (modelKey.ToLower().Contains("order") || modelKey.ToLower().Contains("invoice"))
                        {
                            iconClass = "fas fa-file-invoice-dollar";
                        }
                        else if (modelKey.ToLower().Contains("artist"))
                        {
                            iconClass = "fas fa-music";
                        }
                        else if (modelKey.ToLower().Contains("album"))
                        {
                            iconClass = "fas fa-compact-disc";
                        }
                        else if (modelKey.ToLower().Contains("track"))
                        {
                            iconClass = "fas fa-music";
                        }
                        else if (modelKey.ToLower().Contains("employee"))
                        {
                            iconClass = "fas fa-user-tie";
                        }
                        else if (modelKey.ToLower().Contains("genre"))
                        {
                            iconClass = "fas fa-tags";
                        }
                        
                        <a href="/ui/@modelKey?lang=@currentLang" class="group @(cardClass) hover-lift rounded-xl p-6 text-center transition-all duration-300 border border-gray-200 hover:border-blue-300">
                            <div class="icon-bg group-hover:scale-110 transition-transform duration-300">
                                <i class="@iconClass text-white text-xl"></i>
                            </div>
                            <h3 class="text-xl font-semibold text-gray-800 mb-2 group-hover:text-blue-600 transition-colors">
                                @title
                            </h3>
                            <p class="text-gray-600 text-sm mb-3">
                                @description
                            </p>
                            <div class="text-xs text-gray-500">
                                Table: @table
                            </div>
                            <div class="mt-4">
                                <span class="inline-block px-3 py-1 bg-blue-100 text-blue-600 rounded-full text-xs font-medium">
                                    Manage
                                </span>
                            </div>
                        </a>
                    }
                </div>
            }
            else
            {
                <div class="text-center py-12">
                    <div class="text-gray-400 mb-4">
                        <i class="fas fa-database text-6xl"></i>
                    </div>
                    <h3 class="text-xl font-medium text-gray-900 mb-2">No Models Defined</h3>
                    <p class="text-gray-500">Configure your models in the app.yaml file</p>
                </div>
            }
        </div>
    </main>

    <!-- Footer -->
    <footer class="py-6 px-4 sm:px-6 lg:px-8 border-t border-gray-200 bg-white/50 backdrop-blur-sm">
        <div class="max-w-7xl mx-auto text-center">
            <p class="text-gray-600">
                <a href="/docs" class="text-blue-600 hover:text-blue-800 font-medium inline-flex items-center">
                    <i class="fas fa-book mr-2"></i>
                    API Documentation
                </a>
            </p>
            <p class="text-xs text-gray-500 mt-2">
                Powered by Low Code Platform &copy; 2026
            </p>
        </div>
    </footer>
</div>

<script>
    function changeLanguage(lang) {
        const url = new URL(window.location);
        url.searchParams.set('lang', lang);
        window.location = url.toString();
    }
</script>