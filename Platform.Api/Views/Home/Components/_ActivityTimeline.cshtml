@model Platform.Infrastructure.Definitions.ActivityTimelineConfig
@{
    var currentLang = Context.Request.Query["lang"].FirstOrDefault() ?? "en";
}

<div class="bg-white rounded-2xl p-6 shadow-md">
    @if (!string.IsNullOrEmpty(Model.Title?.GetText(currentLang)))
    {
        <div class="mb-6">
            <h3 class="text-xl font-bold text-gray-800">@Model.Title.GetText(currentLang)</h3>
            @if (!string.IsNullOrEmpty(Model.Subtitle?.GetText(currentLang)))
            {
                <p class="text-sm text-gray-500 mt-1">@Model.Subtitle.GetText(currentLang)</p>
            }
        </div>
    }

    <div class="relative">
        <div class="absolute left-4 top-0 bottom-0 w-0.5 bg-gray-200"></div>
        
        <div class="space-y-4">
            @for (var i = 0; i < Model.Limit; i++)
            {
                <div class="relative flex items-start space-x-4 pl-10">
                    <div class="absolute left-0 w-8 h-8 rounded-full bg-gradient-to-br from-blue-500 to-purple-500 flex items-center justify-center text-white text-sm font-bold shadow-md">
                        @(i + 1)
                    </div>
                    <div class="flex-1 bg-gray-50 rounded-lg p-3 hover:bg-gray-100 transition-colors">
                        <div class="text-sm text-gray-600">活动 @(i + 1)</div>
                        <div class="text-xs text-gray-400 mt-1">2024-01-@(10 + i)</div>
                    </div>
                </div>
            }
        </div>
    </div>
</div>
