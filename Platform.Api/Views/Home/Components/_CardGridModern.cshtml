@model dynamic
@{
    var currentLang = Context.Request.Query["lang"].FirstOrDefault() ?? "en";
    var columns = Model?.Columns;
    var mobileCols = columns?.Mobile ?? 1;
    var tabletCols = columns?.Tablet ?? 2;
    var desktopCols = columns?.Desktop ?? 3;
    var cards = Model?.Cards as List<dynamic> ?? new List<dynamic>();
}

<div class="bg-white py-8">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
        <div class="grid grid-cols-@mobileCols sm:grid-cols-@tabletCols lg:grid-cols-@desktopCols gap-6">
            @foreach (var card in cards)
            {
                var icon = card.Icon?.ToString() ?? "ðŸ“Š";
                var title = card.Title.GetText(currentLang);
                var description = card.Description.GetText(currentLang);
                var href = card.Href?.ToString() ?? "#";
                var gradient = card.Gradient?.ToString() ?? "from-gray-500 to-gray-600";
                var stats = card.Stats as List<dynamic> ?? new List<dynamic>();
                
                <a href="@href" class="group relative bg-white rounded-2xl shadow-lg hover:shadow-2xl transition-all duration-300 hover:-translate-y-2 overflow-hidden border border-gray-100">
                    <!-- é¡¶éƒ¨æ¸å˜æ¡ -->
                    <div class="h-2 bg-gradient-to-r @gradient"></div>
                    
                    <div class="p-6">
                        <!-- å›¾æ ‡ -->
                        <div class="w-14 h-14 rounded-xl bg-gradient-to-br @gradient flex items-center justify-center text-2xl mb-4 shadow-lg group-hover:scale-110 transition-transform">
                            @icon
                        </div>
                        
                        <!-- æ ‡é¢˜ -->
                        <h3 class="text-xl font-bold text-gray-900 mb-2 group-hover:text-gray-700">@title</h3>
                        
                        <!-- æè¿° -->
                        <p class="text-sm text-gray-600 mb-4">@description</p>
                        
                        <!-- ç»Ÿè®¡æ•°æ® -->
                        @if (stats.Any())
                        {
                            <div class="flex flex-wrap gap-2 pt-4 border-t border-gray-100">
                                @foreach (var stat in stats)
                                {
                                    var statLabel = stat.Label?.ToString() ?? "";
                                    var statValue = stat.Value?.ToString() ?? "";
                                    
                                    <div class="flex items-center space-x-1">
                                        <span class="text-xs text-gray-500">@statLabel</span>
                                        <span class="text-sm font-bold text-gray-900">@statValue</span>
                                    </div>
                                }
                            </div>
                        }
                    </div>
                    
                    <!-- æ‚¬åœç®­å¤´ -->
                    <div class="absolute bottom-4 right-4 opacity-0 group-hover:opacity-100 transition-opacity">
                        <svg class="w-6 h-6 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 8l4 4m0 0l-4 4m4-4H3"></path>
                        </svg>
                    </div>
                </a>
            }
        </div>
    </div>
</div>
