@model dynamic
@{
    var currentLang = Context.Request.Query["lang"].FirstOrDefault() ?? "en";
    var title = Model?.Title?.GetText(currentLang) ?? "";
    var items = Model?.Items ?? [];
}

<div class="bg-gradient-to-br from-amber-50 via-orange-50 to-yellow-50 py-8">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
        @if (!string.IsNullOrEmpty(title))
        {
            <h3 class="text-2xl font-bold text-gray-800 mb-6">@title</h3>
        }
        
        <div class="max-w-3xl mx-auto">
            @if (items.Any())
            {
                <div class="space-y-3">
                    @foreach (var item in items)
                    {
                        var icon = item.Icon?.ToString() ?? "üìã";
                        var text = item.Text.GetText(currentLang);
                        var time = item.Time?.ToString() ?? "";
                        var priority = item.Priority?.ToString() ?? "medium";
                        
                        var priorityClasses = priority switch
                        {
                            "high" => "border-l-4 border-red-500 bg-red-50",
                            "medium" => "border-l-4 border-amber-500 bg-white",
                            "low" => "border-l-4 border-green-500 bg-green-50",
                            _ => "border-l-4 border-gray-500 bg-white"
                        };
                        
                        <div class="@priorityClasses rounded-lg p-4 shadow-sm hover:shadow-md transition-all">
                            <div class="flex items-center justify-between">
                                <div class="flex items-center space-x-3 flex-1">
                                    <span class="text-2xl">@icon</span>
                                    <span class="text-gray-800 font-medium">@text</span>
                                </div>
                                <div class="flex items-center space-x-2">
                                    <span class="text-sm text-gray-500">@time</span>
                                    
                                    @if (priority == "high")
                                    {
                                        <span class="px-2 py-1 bg-red-100 text-red-700 text-xs font-medium rounded-full">Á¥ßÊÄ•</span>
