@model dynamic
@{
    var currentLang = Context.Request.Query["lang"].FirstOrDefault() ?? "en";
    var title = Model?.Title?.GetText(currentLang) ?? "";
    var items = Model?.Items ?? [];
    var background = Model?.Background ?? "bg-gradient-to-r from-blue-50 via-indigo-50 to-purple-50";
}

<div class="@background py-8">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
        @if (!string.IsNullOrEmpty(title))
        {
            <h3 class="text-xl font-bold text-gray-800 mb-6 text-center">@title</h3>
        }
        <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-4 gap-6">
            @foreach (var item in items)
            {
                var value = item.Value?.ToString() ?? "0";
                var suffix = item.Suffix?.ToString() ?? "";
                var label = item.Label.GetText(currentLang);
                var icon = item.Icon?.ToString() ?? "ðŸ“Š";
                var gradient = item.Color?.ToString() ?? "from-blue-500 to-cyan-500";
                var trend = item.Trend?.ToString() ?? "";
                
                <div class="bg-white rounded-2xl p-6 shadow-lg hover:shadow-xl transition-all duration-300 hover:-translate-y-1">
                    <div class="flex items-center justify-between mb-4">
                        <div class="w-12 h-12 rounded-xl bg-gradient-to-br @gradient flex items-center justify-center text-2xl shadow-lg">
                            @icon
                        </div>
                        @if (!string.IsNullOrEmpty(trend))
                        {
                            <span class="text-sm font-semibold text-green-600 bg-green-50 px-2 py-1 rounded-full">@trend</span>
                        }
                    </div>
                    <div class="flex items-baseline">
                        <span class="text-3xl font-bold text-gray-900">@value</span>
                        <span class="ml-1 text-lg font-medium text-gray-500">@suffix</span>
                    </div>
                    <p class="mt-2 text-sm text-gray-600">@label</p>
                </div>
            }
        </div>
    </div>
</div>
