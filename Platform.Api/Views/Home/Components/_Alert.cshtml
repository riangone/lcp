@model Platform.Infrastructure.Definitions.AlertConfig
@{
    var currentLang = Context.Request.Query["lang"].FirstOrDefault() ?? "en";
    var projectName = Context.Request.Query["project"].FirstOrDefault() ?? "app";
    
    var alertClasses = Model.AlertType switch
    {
        "success" => "bg-green-50 border-green-200 text-green-800",
        "warning" => "bg-yellow-50 border-yellow-200 text-yellow-800",
        "error" => "bg-red-50 border-red-200 text-red-800",
        _ => "bg-blue-50 border-blue-200 text-blue-800"
    };
    
    var content = Model.Content.GetText(currentLang).Replace("{project}", projectName);
}

<div class="container mx-auto px-4 mb-8">
    <div class="border rounded-xl p-4 text-center @alertClasses">
        <span class="font-semibold">@content</span>
        @if (Model.Link != null)
        {
            <span class="mx-2">|</span>
            <a href="@Model.Link.Href" class="hover:underline">
                @Model.Link.Text.GetText(currentLang)
            </a>
        }
    </div>
</div>
