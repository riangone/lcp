@model Platform.Infrastructure.Definitions.HeroConfig
@{
    var currentLang = Context.Request.Query["lang"].FirstOrDefault() ?? "en";
    var bgClass = Model.Style.Background ?? "bg-gradient-to-br from-indigo-600 via-purple-600 to-pink-500";
    var titleSize = Model.Style.TitleSize ?? "text-5xl";
    var titleClass = Model.Style.TitleClass ?? "font-bold";
    var subtitleClass = Model.Style.SubtitleClass ?? "text-lg";
    var iconSize = Model.Style.IconSize ?? "text-6xl";
    var iconAnimation = Model.Style.IconAnimation ?? "";
    var heightClass = Model.Style.Height ?? "h-96";
}

<div class="@bgClass @heightClass flex items-center justify-center relative overflow-hidden">
    <!-- 背景装饰 -->
    <div class="absolute inset-0 opacity-10">
        <div class="absolute top-10 left-10 w-64 h-64 bg-white rounded-full blur-3xl"></div>
        <div class="absolute bottom-10 right-10 w-96 h-96 bg-white rounded-full blur-3xl"></div>
    </div>
    
    <div class="container mx-auto px-4 text-center relative z-10">
        <div class="@iconSize mb-6 @iconAnimation">
            @Model.Icon
        </div>
        <h1 class="@titleSize @titleClass text-white mb-4 drop-shadow-lg">
            @Model.Title.GetText(currentLang)
        </h1>
        <p class="@subtitleClass text-white text-opacity-90 max-w-3xl mx-auto font-light">
            @Model.Subtitle.GetText(currentLang)
        </p>
    </div>
    
    <!-- 底部波浪 -->
    @if (Model.Style.ShowWave)
    {
        <div class="absolute bottom-0 left-0 right-0">
            <svg viewBox="0 0 1440 120" fill="none" xmlns="http://www.w3.org/2000/svg" class="w-full h-20">
                <path d="M0 0L60 10C120 20 240 40 360 46.7C480 53 600 47 720 43.3C840 40 960 40 1080 46.7C1200 53 1320 67 1380 73.3L1440 80V120H1380C1320 120 1200 120 1080 120C960 120 840 120 720 120C600 120 480 120 360 120C240 120 120 120 60 120H0V0Z" fill="white" fill-opacity="0.1"/>
            </svg>
        </div>
    }
</div>
