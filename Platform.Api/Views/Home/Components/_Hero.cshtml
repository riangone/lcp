@model Platform.Infrastructure.Definitions.HeroConfig
@{
    var currentLang = Context.Request.Query["lang"].FirstOrDefault() ?? "en";
}

<div class="container mx-auto px-4 pt-16 pb-8">
    <div class="text-center">
        <h1 class="@Model.Style.TitleSize font-bold text-gray-800 mb-4">
            @Model.Icon @Model.Title.GetText(currentLang)
        </h1>
        <p class="@Model.Style.SubtitleSize text-gray-600 max-w-2xl mx-auto">
            @Model.Subtitle.GetText(currentLang)
        </p>
    </div>
</div>
