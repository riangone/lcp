@model Platform.Infrastructure.Definitions.NavPipelineConfig
@{
    var currentLang = Context.Request.Query["lang"].FirstOrDefault() ?? "en";
}

<div class="container mx-auto px-4 py-8">
    @if (!string.IsNullOrEmpty(Model.Title?.GetText(currentLang)))
    {
        <div class="text-center mb-8">
            <h2 class="text-2xl font-bold text-gray-800">@Model.Title.GetText(currentLang)</h2>
            <div class="w-16 h-1 bg-gradient-to-r from-blue-500 to-purple-500 mx-auto mt-2 rounded-full"></div>
        </div>
    }

    <div class="flex flex-wrap justify-center gap-4">
        @foreach (var stage in Model.Stages)
        {
            <a href="@stage.Href" class="group flex items-center space-x-3 bg-white rounded-xl px-6 py-4 shadow-md hover:shadow-lg transition-all hover:-translate-y-1 border-l-4 border-@stage.Color.Split('-')[1]">
                <span class="text-2xl">@stage.Icon</span>
                <div>
                    <div class="font-semibold text-gray-800 group-hover:text-blue-600 transition-colors">
                        @stage.Label.GetText(currentLang)
                    </div>
                </div>
            </a>
        }
    </div>
</div>
