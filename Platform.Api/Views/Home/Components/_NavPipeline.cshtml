@model dynamic
@{
    var currentLang = Context.Request.Query["lang"].FirstOrDefault() ?? "en";
    var titleObj = Model?.Title;
    var title = titleObj != null ? (titleObj.GetType().GetProperty("GetText") != null ? titleObj.GetText(currentLang) : titleObj.ToString()) : "";
    var stagesList = Model?.Stages as System.Collections.IList ?? new System.Collections.ArrayList();
}

<div class="bg-white border-b border-gray-200">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
        <div class="flex items-center justify-between py-4">
            <h2 class="text-lg font-semibold text-gray-800">@title</h2>
            <div class="flex items-center space-x-1">
                @{ var i = 0; }
                @foreach (var stage in stagesList)
                {
                    var labelObj = stage?.GetType().GetProperty("Label")?.GetValue(stage);
                    var label = labelObj != null ? (labelObj.GetType().GetProperty("GetText") != null ? labelObj.GetText(currentLang) : labelObj.ToString()) : "";
                    var icon = stage?.GetType().GetProperty("Icon")?.GetValue(stage)?.ToString() ?? "üìç";
                    var href = stage?.GetType().GetProperty("Href")?.GetValue(stage)?.ToString() ?? "#";
                    
                    <div class="flex items-center">
                        <a href="@href" class="group flex items-center px-3 py-2 rounded-lg hover:bg-gray-50 transition-all">
                            <span class="text-xl mr-2">@icon</span>
                            <span class="text-sm font-medium text-gray-700 group-hover:text-gray-900">@label</span>
                        </a>
                        @if (i < stagesList.Count - 1)
                        {
                            <svg class="w-4 h-4 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"></path>
                            </svg>
                        }
                    }
                    i++;
                }
            </div>
        </div>
    </div>
</div>
