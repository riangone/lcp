@model Platform.Infrastructure.Definitions.FunnelChartConfig
@{
    var currentLang = Context.Request.Query["lang"].FirstOrDefault() ?? "en";
    var maxValue = Model.Stages.Any() ? Model.Stages.Max(s => s.Value) : 1;
}

<div class="bg-white rounded-2xl p-6 shadow-md">
    @if (!string.IsNullOrEmpty(Model.Title?.GetText(currentLang)))
    {
        <div class="text-center mb-6">
            <h3 class="text-xl font-bold text-gray-800">@Model.Title.GetText(currentLang)</h3>
            @if (!string.IsNullOrEmpty(Model.Subtitle?.GetText(currentLang)))
            {
                <p class="text-sm text-gray-500 mt-1">@Model.Subtitle.GetText(currentLang)</p>
            }
        </div>
    }

    <div class="space-y-3">
        @foreach (var stage in Model.Stages)
        {
            var widthPercent = (double)stage.Value / maxValue * 100;
            <div class="group">
                <div class="flex items-center justify-between mb-1">
                    <span class="text-sm font-medium text-gray-700">@stage.Name.GetText(currentLang)</span>
                    <span class="text-sm font-bold text-gray-800">@stage.Value</span>
                </div>
                <div class="w-full bg-gray-200 rounded-full h-8 overflow-hidden">
                    <div class="@stage.Color h-full rounded-full transition-all duration-500 group-hover:opacity-80" 
                         style="width: @widthPercent%"></div>
                </div>
            </div>
        }
    </div>
</div>
