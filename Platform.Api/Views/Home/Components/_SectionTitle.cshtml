@model Platform.Infrastructure.Definitions.SectionTitleConfig
@{
    var currentLang = Context.Request.Query["lang"].FirstOrDefault() ?? "en";
    var align = Model.Style?.Align ?? "center";
    var alignClass = align == "center" ? "text-center" : (align == "left" ? "text-left" : "text-right");
}

<div class="container mx-auto px-4 py-12">
    <div class="@alignClass">
        <div class="text-5xl mb-4">@Model.Style?.Icon</div>
        <h2 class="text-3xl font-bold text-gray-800 mb-3">
            @Model.Title.GetText(currentLang)
        </h2>
        <p class="text-lg text-gray-600 max-w-2xl mx-auto">
            @Model.Subtitle.GetText(currentLang)
        </p>
        <div class="w-24 h-1 bg-gradient-to-r from-indigo-500 to-purple-500 mx-auto mt-6 rounded-full"></div>
    </div>
</div>
