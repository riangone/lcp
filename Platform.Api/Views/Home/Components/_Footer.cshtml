@model Platform.Infrastructure.Definitions.FooterConfig
@{
    var currentLang = Context.Request.Query["lang"].FirstOrDefault() ?? "en";
    var bgClass = Model.Background ?? "bg-gradient-to-r from-gray-800 to-gray-900";
}

<footer class="@bgClass text-white py-12">
    <div class="container mx-auto px-4">
        <div class="flex flex-wrap justify-center gap-8 mb-8">
            @foreach (var link in Model.Links)
            {
                <a href="@link.Href" class="text-gray-300 hover:text-white transition-colors duration-300 flex items-center space-x-2 group">
                    <span>@link.Text.GetText(currentLang)</span>
                    <svg class="w-4 h-4 transform group-hover:translate-x-1 transition-transform" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"></path>
                    </svg>
                </a>
            }
        </div>
        <div class="border-t border-gray-700 pt-8 text-center text-gray-400">
            <p>@Model.Copyright.GetText(currentLang)</p>
        </div>
    </div>
</footer>
