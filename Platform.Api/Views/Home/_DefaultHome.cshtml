        </p>
    </div>

    <!-- Alert -->
    @if (!string.IsNullOrEmpty(projectName))
    {
        <div class="container mx-auto px-4 mb-8">
            <div class="bg-green-50 border border-green-200 rounded-xl p-4 text-center">
                <span class="text-green-800 font-semibold">
                    @(currentLang == "zh" ? "âœ… å½“å‰é¡¹ç›®ï¼š" : "âœ… Current Project: ")
                </span>
                <span class="text-green-600 font-bold text-lg">@projectDisplayName</span>
                <span class="text-green-600 mx-2">|</span>
                <a href="/" class="text-green-600 hover:underline">
                    @(currentLang == "zh" ? "åˆ‡æ¢å…¶ä»–é¡¹ç›®" : "Switch Project")
                </a>
            </div>
        </div>
    }

    <!-- Models Grid -->
    @if (models != null && models.Any())
    {
        <div class="container mx-auto px-4 pb-12">
            <h2 class="text-2xl font-bold text-gray-800 mb-6 text-center">
                @(currentLang == "zh" ? "æ•°æ®æ¨¡å‹" : "Data Models")
            </h2>
            <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 xl:grid-cols-4 gap-6">
                @foreach (var model in models)
                {
                    var uiLabels = model.Value.Ui?.Labels;
                    var localizedLabels = currentLang == "zh" && uiLabels?.Zh != null ? uiLabels.Zh : uiLabels?.En;
                    var title = localizedLabels?.ContainsKey("title") == true ? localizedLabels["title"] : model.Key;
                    <a href="/ui/@model.Key?project=@projectName" class="project-card bg-white rounded-xl p-6 shadow-md">
