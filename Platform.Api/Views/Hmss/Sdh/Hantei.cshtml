@{
    Layout = "_HmssLayout";
    ViewData["Title"] = "车检替代判定";
    ViewData["Breadcrumb1"] = "SDH";
    ViewData["Breadcrumb2"] = "车检替代判定";
}

<div class="hmss-page-header">
    <h1 class="page-title">
        <i class="bi bi-clipboard-check"></i>
        车检替代判定
    </h1>
    <p class="page-subtitle">车检替代判定主画面 - 管理客户车检替代判定信息</p>
</div>

<!-- 搜索区域 -->
<div class="hmss-search-panel mb-4">
    <div class="search-form">
        <div class="row g-3">
            <div class="col-md-3">
                <label class="form-label">客户编号</label>
                <input type="text" class="form-control" id="searchCsrno" placeholder="请输入客户编号">
            </div>
            <div class="col-md-3">
                <label class="form-label">客户姓名</label>
                <input type="text" class="form-control" id="searchCsrnm" placeholder="请输入客户姓名">
            </div>
            <div class="col-md-3">
                <label class="form-label">车牌号</label>
                <input type="text" class="form-control" id="searchCarno" placeholder="请输入车牌号">
            </div>
            <div class="col-md-3">
                <label class="form-label">店铺</label>
                <select class="form-select" id="searchTenpo">
                    <option value="">全部</option>
                    <option value="001">广岛本店</option>
                    <option value="002">东广岛店</option>
                    <option value="003">吴店</option>
                    <option value="004">福山店</option>
                    <option value="005">尾道店</option>
                </select>
            </div>
        </div>
        <div class="search-actions mt-3">
            <button type="button" class="btn btn-primary" onclick="searchHantei()">
                <i class="bi bi-search"></i> 搜索
            </button>
            <button type="button" class="btn btn-secondary" onclick="resetSearch()">
                <i class="bi bi-arrow-counterclockwise"></i> 重置
            </button>
            <button type="button" class="btn btn-success" onclick="createNew()">
                <i class="bi bi-plus-lg"></i> 新增
            </button>
        </div>
    </div>
</div>

<!-- 判定列表 -->
<div class="hmss-data-panel">
    <div class="panel-header">
        <h2 class="panel-title">判定列表</h2>
        <div class="panel-actions">
            <div class="btn-group">
                <button type="button" class="btn btn-sm btn-outline-primary" onclick="exportCSV()">
                    <i class="bi bi-download"></i> 导出 CSV
                </button>
            </div>
        </div>
    </div>
    <div class="panel-content">
        <div class="table-responsive">
            <table class="hmss-table" id="hanteiTable">
                <thead>
                    <tr>
                        <th>年月</th>
                        <th>客户编号</th>
                        <th>客户姓名</th>
                        <th>车牌号</th>
                        <th>车辆</th>
                        <th>判定代码</th>
                        <th>判定日期</th>
                        <th>店铺</th>
                        <th class="text-center">操作</th>
                    </tr>
                </thead>
                <tbody id="hanteiTableBody">
                    <tr>
                        <td colspan="9" class="text-center py-5">
                            <div class="spinner-border text-primary" role="status">
                                <span class="visually-hidden">Loading...</span>
                            </div>
                        </td>
                    </tr>
                </tbody>
            </table>
        </div>
        
        <!-- 分页 -->
        <div class="hmss-pagination" id="hanteiPagination">
            <nav aria-label="Page navigation">
                <ul class="pagination justify-content-center" id="paginationUl">
                </ul>
            </nav>
        </div>
    </div>
</div>

<!-- 详情模态框 -->
<div class="modal fade" id="detailModal" tabindex="-1">
    <div class="modal-dialog modal-lg">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">
                    <i class="bi bi-file-text"></i>
                    判定详情
                </h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
            </div>
            <div class="modal-body" id="detailModalBody">
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">关闭</button>
                <button type="button" class="btn btn-primary">编辑</button>
            </div>
        </div>
    </div>
</div>

