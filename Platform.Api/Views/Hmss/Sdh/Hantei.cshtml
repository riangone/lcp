@section Scripts {
<script>
    let currentPage = 1;
    const pageSize = 20;
    
    // 搜索判定列表
    async function searchHantei(page = 1) {
        currentPage = page;
        
        const params = new URLSearchParams({
            page: page,
            size: pageSize,
            csrno: document.getElementById('searchCsrno').value,
            csrnm: document.getElementById('searchCsrnm').value,
            carno: document.getElementById('searchCarno').value,
            tenpo_cd: document.getElementById('searchTenpo').value
        });
        
        try {
            const response = await fetch(`/api/hmss/sdh/hantei?${params}`);
            const result = await response.json();
            
            if (result.success) {
                renderTable(result.data);
                renderPagination(result.total, page);
            } else {
                showError('加载失败');
            }
        } catch (error) {
            console.error('Search error:', error);
            showError('网络错误');
        }
    }
    
    // 渲染表格
    function renderTable(data) {
        const tbody = document.getElementById('hanteiTableBody');
        
        if (!data || data.length === 0) {
            tbody.innerHTML = '<tr><td colspan="9" class="text-center py-5">暂无数据</td></tr>';
            return;
        }
        
        tbody.innerHTML = data.map(item => `
            <tr>
                <td>${item.yymm || ''}</td>
                <td>${item.csrno || ''}</td>
                <td>${item.csr_nm || ''}</td>
                <td>${item.carno || ''}</td>
                <td>${item.syadai || ''}</td>
                <td>${renderHanteiCd(item.hantei_cd)}</td>
                <td>${formatDate(item.hantei_dt)}</td>
                <td>${renderTenpo(item.tenpo_cd)}</td>
                <td class="text-center">
                    <button class="btn btn-sm btn-outline-primary btn-action" onclick="viewDetail('${item.id}')">
                        <i class="bi bi-eye"></i>
                    </button>
                    <button class="btn btn-sm btn-outline-secondary btn-action" onclick="editHantei('${item.id}')">
                        <i class="bi bi-pencil"></i>
                    </button>
                </td>
            </tr>
        `).join('');
    }
    
    // 渲染判定代码
    function renderHanteiCd(cd) {
        const map = {
            '1': { text: '代替促進', class: 'bg-primary' },
            '2': { text: '入庫促進', class: 'bg-success' },
            '3': { text: '入促・代促', class: 'bg-info' },
            '4': { text: '代替確定', class: 'bg-warning' },
            '5': { text: '代替予定', class: 'bg-primary-subtle' },
            '6': { text: '入庫確定', class: 'bg-success-subtle' },
            '7': { text: '入庫予定', class: 'bg-info-subtle' },
            '8': { text: '他社代替', class: 'bg-secondary' },
            '9': { text: '他社入庫', class: 'bg-secondary' },
            '10': { text: '転売', class: 'bg-dark' },
            '11': { text: '県外転出', class: 'bg-dark' },
            '12': { text: '入庫 X', class: 'bg-danger' },
            '13': { text: '車両なし', class: 'bg-warning' },
            '14': { text: '連絡 X', class: 'bg-danger' },
            '15': { text: '所在不明', class: 'bg-danger' },
            '16': { text: '業者契約', class: 'bg-secondary' },
            '17': { text: 'リース', class: 'bg-secondary' },
            '18': { text: 'リース指定工場', class: 'bg-secondary' },
            '19': { text: '納入依頼', class: 'bg-primary' }
        };
        
        const info = map[cd] || { text: cd, class: 'bg-secondary' };
        return `<span class="badge ${info.class}">${info.text}</span>`;
    }
    
    // 渲染店铺
    function renderTenpo(cd) {
        const map = {
            '001': '广岛本店',
            '002': '东广岛店',
            '003': '吴店',
            '004': '福山店',
            '005': '尾道店'
        };
        return map[cd] || cd;
    }
    
    // 格式化日期
    function formatDate(dateStr) {
        if (!dateStr) return '';
        const date = new Date(dateStr);
        return date.toLocaleDateString('zh-CN');
    }
    
    // 渲染分页
    function renderPagination(total, current) {
        const totalPages = Math.ceil(total / pageSize);
        const ul = document.getElementById('paginationUl');
        
        if (totalPages <= 1) {
            ul.innerHTML = '';
            return;
        }
        
        let html = `
            <li class="page-item ${current === 1 ? 'disabled' : ''}">
                <a class="page-link" href="#" onclick="searchHantei(${current - 1}); return false;">上一页</a>
            </li>
        `;
        
        for (let i = 1; i <= totalPages; i++) {
            html += `
                <li class="page-item ${i === current ? 'active' : ''}">
                    <a class="page-link" href="#" onclick="searchHantei(${i}); return false;">${i}</a>
                </li>
            `;
        }
        
        html += `
            <li class="page-item ${current === totalPages ? 'disabled' : ''}">
                <a class="page-link" href="#" onclick="searchHantei(${current + 1}); return false;">下一页</a>
            </li>
        `;
        
        ul.innerHTML = html;
    }
    
    // 重置搜索
    function resetSearch() {
        document.getElementById('searchCsrno').value = '';
        document.getElementById('searchCsrnm').value = '';
        document.getElementById('searchCarno').value = '';
        document.getElementById('searchTenpo').value = '';
        searchHantei(1);
    }
    
    // 新增
    function createNew() {
        window.location.href = '/hmss/sdh/hantei/create';
    }
    
    // 查看详情
    function viewDetail(id) {
        // TODO: 实现详情查看
        alert('查看详情：' + id);
    }
    
    // 编辑
    function editHantei(id) {
        // TODO: 实现编辑
        alert('编辑：' + id);
    }
    
    // 导出 CSV
    function exportCSV() {
        // TODO: 实现 CSV 导出
        alert('导出 CSV');
    }
    
    // 显示错误
    function showError(message) {
        const tbody = document.getElementById('hanteiTableBody');
        tbody.innerHTML = `<tr><td colspan="9" class="text-center py-5 text-danger">${message}</td></tr>`;
    }
    
    // 页面加载时搜索
    document.addEventListener('DOMContentLoaded', () => {
        searchHantei(1);
    });
</script>
}
